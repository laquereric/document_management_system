<% content_for :title, "Tags" %>

<div class="container-lg px-3">
  <!-- Page Header -->
  <%= render(Layout::PageHeader.new(
    title: "Tags",
    description: "Manage and organize your document tags",
    icon: "tag",
    action: {
      text: "New Tag",
      url: new_tag_path
    }
  )) %>

  <!-- Statistics Cards -->
  <%= render(Layout::CardStatisticsList.new(
    title: "Tag Overview",
    statistics: [
      {
        icon: "tag",
        icon_color: "color-fg-accent",
        value: @tags.respond_to?(:total_count) ? @tags.total_count : @tags.count,
        label: "Total Tags"
      },
      {
        icon: "link",
        icon_color: "color-fg-success",
        value: Tag.joins(:documents).distinct.count,
        label: "In Use"
      },
      {
        icon: "file-text",
        icon_color: "color-fg-attention",
        value: DocumentTag.joins(:tag, :document).count,
        label: "Total Associations"
      },
      {
        icon: "star",
        icon_color: "color-fg-done",
        value: (most_used_tag = Tag.joins(:documents).group('tags.id').order('COUNT(documents.id) DESC').first) ? most_used_tag.documents.count : 0,
        label: "Most Used"
      }
    ]
  )) %>

  <!-- Search and Filters -->
  <%= render(Layout::CardListSearchAndFilters.new(
    search_object: @q,
    url: tags_path,
    title: "Search & Filters",
    fields: [
      {
        name: :name_cont,
        label: "Name",
        placeholder: "Search tags..."
      },
      {
        name: :color_cont,
        label: "Color",
        placeholder: "Filter by color..."
      }
    ]
  )) %>

  <!-- Tags Section -->
  <div class="mt-5">
    <div class="d-flex flex-items-center flex-justify-between mb-3">
      <h2 class="f4 text-semibold">
        All Tags
        <% if @tags.respond_to?(:total_count) %>
          <span class="Counter"><%= @tags.total_count %></span>
        <% else %>
          <span class="Counter"><%= @tags.count %></span>
        <% end %>
      </h2>
    </div>

    <div class="Box">
      <div class="Box-body">
        <%= render(Layout::CardList.new(
          cards: @tags,
          layout: :grid,
          title: "Tags",
          empty_state_title: "No Tags Found",
          empty_state_description: "Get started by creating your first tag.",
          empty_state_action: {
            text: "Create Tag",
            url: new_tag_path
          }
        )) do %>
          <% @tags.each do |tag| %>
            <div class="flex-1" style="min-width: 320px; max-width: 400px;">
              <%= render(Tag::CardComponent.new(tag: tag, admin_context: false)) %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
