<% content_for :title, "Tags" %>

<div class="container-lg px-3">
  <!-- Page Header -->
  <%= render(Layout::PageHeader.new(
    title: "Tags",
    description: "Manage and organize your document tags",
    icon: "tag",
    action: {
      text: "New Tag",
      url: new_tag_path
    }
  )) %>

  <!-- Statistics Cards -->
  <div class="mt-4">
    <h2 class="f4 text-semibold mb-3">Tag Overview</h2>
    <div class="d-flex flex-wrap" style="gap: 16px;">
      <div class="flex-1" style="min-width: 240px;">
        <div class="Box p-3">
          <div class="d-flex flex-items-center">
            <div class="mr-3">
              <svg class="octicon octicon-tag color-fg-accent" width="24" height="24" viewBox="0 0 16 16">
                <path d="M1 7.775V2.75C1 1.784 1.784 1 2.75 1h5.025c.464 0 .91.184 1.238.513l6.25 6.25a1.75 1.75 0 0 1 0 2.474l-5.026 5.026a1.75 1.75 0 0 1-2.474 0l-6.25-6.25A1.752 1.752 0 0 1 1 7.775Zm1.5 0c0 .066.026.13.073.177l6.25 6.25a.25.25 0 0 0 .354 0l5.025-5.025a.25.25 0 0 0 0-.354l-6.25-6.25a.25.25 0 0 0-.177-.073H2.75a.25.25 0 0 0-.25.25ZM6 5a1 1 0 1 1 0 2 1 1 0 0 1 0-2Z"></path>
              </svg>
            </div>
            <div>
              <div class="f1 lh-condensed text-semibold">
                <% if @tags.respond_to?(:total_count) %>
                  <%= @tags.total_count %>
                <% else %>
                  <%= @tags.count %>
                <% end %>
              </div>
              <div class="f6 color-fg-muted">Total Tags</div>
            </div>
          </div>
        </div>
      </div>

      <div class="flex-1" style="min-width: 240px;">
        <div class="Box p-3">
          <div class="d-flex flex-items-center">
            <div class="mr-3">
              <svg class="octicon octicon-link color-fg-success" width="24" height="24" viewBox="0 0 16 16">
                <path d="m7.775 3.275 1.25-1.25a3.5 3.5 0 1 1 4.95 4.95l-2.5 2.5a3.5 3.5 0 0 1-4.95 0 .751.751 0 0 1 .018-1.042.751.751 0 0 1 1.042-.018 1.998 1.998 0 0 0 2.83 0l2.5-2.5a2.002 2.002 0 0 0-2.83-2.83l-1.25 1.25a.751.751 0 0 1-1.042-.018.751.751 0 0 1-.018-1.042Zm-4.69 9.64a1.998 1.998 0 0 0 2.83 0l1.25-1.25a.751.751 0 0 1 1.042.018.751.751 0 0 1 .018 1.042l-1.25 1.25a3.5 3.5 0 1 1-4.95-4.95l2.5-2.5a3.5 3.5 0 0 1 4.95 0 .751.751 0 0 1-.018 1.042.751.751 0 0 1-1.042.018 1.998 1.998 0 0 0-2.83 0l-2.5 2.5a1.998 1.998 0 0 0 0 2.83Z"></path>
              </svg>
            </div>
            <div>
              <div class="f1 lh-condensed text-semibold">
                <%= Tag.joins(:documents).distinct.count %>
              </div>
              <div class="f6 color-fg-muted">In Use</div>
            </div>
          </div>
        </div>
      </div>

      <div class="flex-1" style="min-width: 240px;">
        <div class="Box p-3">
          <div class="d-flex flex-items-center">
            <div class="mr-3">
              <svg class="octicon octicon-file-text color-fg-attention" width="24" height="24" viewBox="0 0 16 16">
                <path d="M2 1.75C2 .784 2.784 0 3.75 0h6.586c.464 0 .909.184 1.237.513l2.914 2.914c.329.328.513.773.513 1.237v9.586A1.75 1.75 0 0 1 13.25 16h-9.5A1.75 1.75 0 0 1 2 14.25Zm1.75-.25a.25.25 0 0 0-.25.25v12.5c0 .138.112.25.25.25h9.5a.25.25 0 0 0 .25-.25V6H9.75A1.75 1.75 0 0 1 8 4.25V1.5Zm6.75.062V4.25c0 .138.112.25.25.25h2.688l-.011-.013-2.914-2.914-.013-.011Z"></path>
              </svg>
            </div>
            <div>
              <div class="f1 lh-condensed text-semibold">
                <%= DocumentTag.joins(:tag, :document).count %>
              </div>
              <div class="f6 color-fg-muted">Total Associations</div>
            </div>
          </div>
        </div>
      </div>

      <div class="flex-1" style="min-width: 240px;">
        <div class="Box p-3">
          <div class="d-flex flex-items-center">
            <div class="mr-3">
              <svg class="octicon octicon-star color-fg-done" width="24" height="24" viewBox="0 0 16 16">
                <path d="M8 .25a.75.75 0 0 1 .673.418l1.882 3.815 4.21.612a.75.75 0 0 1 .416 1.279l-3.046 2.97.719 4.192a.751.751 0 0 1-1.088.791L8 12.347l-3.766 1.98a.75.75 0 0 1-1.088-.79l.72-4.194L.818 6.374a.75.75 0 0 1 .416-1.28l4.21-.611L7.327.668A.75.75 0 0 1 8 .25Zm0 2.445L6.615 5.5a.75.75 0 0 1-.564.41l-3.097.45 2.24 2.184a.75.75 0 0 1 .216.664l-.528 3.084 2.769-1.456a.75.75 0 0 1 .698 0l2.77 1.456-.53-3.084a.75.75 0 0 1 .216-.664l2.24-2.183-3.096-.45a.75.75 0 0 1-.564-.41L8 2.694Z"></path>
              </svg>
            </div>
            <div>
              <div class="f1 lh-condensed text-semibold">
                <% most_used_tag = Tag.joins(:documents).group('tags.id').order('COUNT(documents.id) DESC').first %>
                <%= most_used_tag ? most_used_tag.documents.count : 0 %>
              </div>
              <div class="f6 color-fg-muted">Most Used</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Search and Filters -->
  <div class="mt-5">
    <h2 class="f4 text-semibold mb-3">Search & Filters</h2>
    <div class="Box">
      <div class="Box-body">
        <%= search_form_for @q, url: tags_path, method: :get, class: "d-flex flex-items-center gap-3" do |f| %>
          <div class="flex-1">
            <%= f.label :name_cont, "Name", class: "form-label sr-only" %>
            <%= f.text_field :name_cont, class: "form-control", placeholder: "Search tags..." %>
          </div>
          <div class="flex-1">
            <%= f.label :color_cont, "Color", class: "form-label sr-only" %>
            <%= f.text_field :color_cont, class: "form-control", placeholder: "Filter by color..." %>
          </div>
          <div>
            <%= f.submit "Search", class: "btn btn-primary" %>
          </div>
          <div>
            <%= link_to "Clear", tags_path, class: "btn" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Tags Section -->
  <div class="mt-5">
    <div class="d-flex flex-items-center flex-justify-between mb-3">
      <h2 class="f4 text-semibold">
        All Tags
        <% if @tags.respond_to?(:total_count) %>
          <span class="Counter"><%= @tags.total_count %></span>
        <% else %>
          <span class="Counter"><%= @tags.count %></span>
        <% end %>
      </h2>
    </div>

    <div class="Box">
      <div class="Box-body">
        <%= render(Layout::CardList.new(
          cards: @tags,
          layout: :grid,
          title: "Tags",
          empty_state_title: "No Tags Found",
          empty_state_description: "Get started by creating your first tag.",
          empty_state_action: {
            text: "Create Tag",
            url: new_tag_path
          }
        )) do %>
          <% @tags.each do |tag| %>
            <div class="flex-1" style="min-width: 320px; max-width: 400px;">
              <%= render(Tag::CardComponent.new(tag: tag, admin_context: false)) %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
