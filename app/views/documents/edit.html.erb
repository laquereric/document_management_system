<% content_for :title, "Edit Document" %>

<div class="container-lg px-3 py-4">
  <!-- Header -->
  <div class="d-flex flex-items-center flex-justify-between mb-4">
    <div>
      <h1 class="h2">Edit Document</h1>
      <p class="color-fg-muted">Update document details for "<%= @document.title %>"</p>
    </div>
    <div class="d-flex flex-items-center gap-2">
      <%= link_to @document, class: "btn" do %>
        <%= octicon "arrow-left", class: "mr-2" %>
        Back to Document
      <% end %>
    </div>
  </div>

  <!-- Form -->
  <div class="Box">
    <div class="Box-header">
      <h3 class="Box-title">Document Details</h3>
    </div>
    <div class="Box-body">
      <%= render(Forms::DocumentFormComponent.new(
        document: @document,
        submit_text: "Update Document",
        cancel_url: @document
      )) %>
    </div>
  </div>
</div>
