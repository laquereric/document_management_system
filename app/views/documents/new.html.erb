<% content_for :title, "New Document" %>

<div class="container-lg px-3 py-4">
  <!-- Header -->
  <div class="d-flex flex-items-center flex-justify-between mb-4">
    <div>
      <h1 class="h2">New Document</h1>
      <p class="color-fg-muted">Create a new document in <%= @folder&.name || 'your workspace' %></p>
    </div>
    <div class="d-flex flex-items-center gap-2">
      <%= link_to documents_path, class: "btn" do %>
        <%= octicon "arrow-left", class: "mr-2" %>
        Back to Documents
      <% end %>
    </div>
  </div>

  <!-- Form -->
  <div class="Box">
    <div class="Box-header">
      <h3 class="Box-title">Document Details</h3>
    </div>
    <div class="Box-body">
      <%= render(Forms::DocumentFormComponent.new(
        document: @document,
        submit_text: "Create Document",
        cancel_url: documents_path
      )) %>
    </div>
  </div>
</div>
