<div class="container-lg px-3 py-6">
  <!-- Header -->
  <div class="d-flex flex-items-center flex-justify-between mb-4">
    <div>
      <h1 class="h2 mb-1">Edit Team</h1>
      <p class="text-gray">Update team information and settings</p>
    </div>
    <div class="d-flex gap-2">
      <%= link_to models_team_path(@team), class: "btn btn-sm btn-outline mr-3" do %>
        <svg class="octicon octicon-eye mr-2" width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
          <path d="M1.679 7.932c.412-.621 1.242-1.75 2.366-2.717C5.175 4.242 6.527 3.5 8 3.5c1.473 0 2.824.742 3.955 1.715 1.124.967 1.954 2.096 2.366 2.717a.119.119 0 010 .136c-.412.621-1.242 1.75-2.366 2.717C10.825 11.758 9.473 12.5 8 12.5c-1.473 0-2.824-.742-3.955-1.715C2.868 9.687 2.038 8.558 1.626 7.937a.119.119 0 010-.136zM8 2c-1.981 0-3.67.992-4.933 2.078C1.797 5.169.88 6.423.43 7.1a1.619 1.619 0 000 1.798c.45.678 1.367 1.932 2.637 3.024C4.329 13.008 6.019 14 8 14c1.981 0 3.67-.992 4.933-2.078 1.27-1.091 2.187-2.345 2.637-3.023a1.619 1.619 0 000-1.798c-.45-.678-1.367-1.932-2.637-3.023C11.671 2.992 9.981 2 8 2zm0 8a2 2 0 100-4 2 2 0 000 4z"/>
        </svg>
        View Team
      <% end %>
      <%= link_to models_teams_path, class: "btn btn-outline" do %>
        <svg class="octicon octicon-arrow-left mr-2" width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
          <path d="M7.78 12.53a.75.75 0 01-1.06 0L2.47 8.28a.75.75 0 010-1.06l4.25-4.25a.75.75 0 011.06 1.06L4.81 7h7.44a.75.75 0 010 1.5H4.81l2.97 2.97a.75.75 0 010 1.06z"/>
        </svg>
        Back to Teams
      <% end %>
    </div>
  </div>

  <div class="row g-4">
    <div class="col-12 col-lg-8">
      <div class="Box">
        <div class="Box-header">
          <h3 class="Box-title">Team Information</h3>
        </div>
        <div class="Box-body">
          <%= form_with model: [:admin, @team], local: true do |form| %>
            <% if @team.errors.any? %>
              <div class="alert alert-danger mb-4">
                <h4 class="alert-heading">Please fix the following errors:</h4>
                <ul class="mb-0">
                  <% @team.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="row g-3">
              <div class="col-12 col-md-6">
                <div class="form-group">
                  <%= form.label :name, class: "form-label" %>
                  <%= form.text_field :name, class: "form-control #{'is-invalid' if @team.errors[:name].any?}", placeholder: "Enter team name" %>
                  <% if @team.errors[:name].any? %>
                    <div class="invalid-feedback"><%= @team.errors[:name].first %></div>
                  <% end %>
                </div>
              </div>

              <div class="col-12 col-md-6">
                <div class="form-group">
                  <%= form.label :organization_id, "Organization", class: "form-label" %>
                  <%= form.collection_select :organization_id, 
                      Organization.order(:name), 
                      :id, 
                      :name, 
                      { prompt: "Select organization" }, 
                      class: "form-select #{'is-invalid' if @team.errors[:organization_id].any?}" %>
                  <% if @team.errors[:organization_id].any? %>
                    <div class="invalid-feedback"><%= @team.errors[:organization_id].first %></div>
                  <% end %>
                </div>
              </div>

              <div class="col-12 col-md-6">
                <div class="form-group">
                  <%= form.label :leader_id, "Team Leader", class: "form-label" %>
                  <%= form.collection_select :leader_id, 
                      User.order(:name), 
                      :id, 
                      :name, 
                      { prompt: "Select team leader (optional)" }, 
                      class: "form-select #{'is-invalid' if @team.errors[:leader_id].any?}" %>
                  <% if @team.errors[:leader_id].any? %>
                    <div class="invalid-feedback"><%= @team.errors[:leader_id].first %></div>
                  <% end %>
                  <div class="form-text">Optional: Assign a team leader who can manage team resources</div>
                </div>
              </div>

              <div class="col-12">
                <div class="form-group">
                  <%= form.label :description, class: "form-label" %>
                  <%= form.text_area :description, 
                      rows: 4, 
                      class: "form-control #{'is-invalid' if @team.errors[:description].any?}", 
                      placeholder: "Describe the team's purpose and responsibilities" %>
                  <% if @team.errors[:description].any? %>
                    <div class="invalid-feedback"><%= @team.errors[:description].first %></div>
                  <% end %>
                </div>
              </div>
            </div>

            <div class="d-flex flex-items-center gap-3 mt-4">
              <%= form.submit "Update Team", class: "btn btn-primary" %>
              <%= link_to "Cancel", models_team_path(@team), class: "btn btn-outline" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="col-12 col-lg-4">
      <div class="Box">
        <div class="Box-header">
          <h3 class="Box-title">Current Team Info</h3>
        </div>
        <div class="Box-body">
          <div class="d-flex flex-column gap-3">
            <div>
              <label class="form-label">Current Organization</label>
              <div class="form-control-plaintext">
                <%= @team.organization&.name || 'None' %>
              </div>
            </div>
            <div>
              <label class="form-label">Current Leader</label>
              <div class="form-control-plaintext">
                <%= @team.leader&.name || 'None' %>
              </div>
            </div>
            <div>
              <label class="form-label">Member Count</label>
              <div class="form-control-plaintext">
                <%= @team.total_members %> members
              </div>
            </div>
            <div>
              <label class="form-label">Created</label>
              <div class="form-control-plaintext">
                <%= @team.created_at.strftime("%B %d, %Y") %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="Box mt-4">
        <div class="Box-header">
          <h3 class="Box-title">Quick Actions</h3>
        </div>
        <div class="Box-body">
          <div class="d-flex flex-column gap-2">
            <%= link_to models_team_path(@team), class: "btn btn-outline btn-sm" do %>
              <svg class="octicon octicon-eye mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="16" height="16">
                <path d="M8 2c1.981 0 3.671.992 4.933 2.078 1.27 1.091 2.187 2.345 2.637 3.023a1.62 1.62 0 0 1 0 1.798c-.45.678-1.367 1.932-2.637 3.023C11.671 13.008 9.981 14 8 14c-1.981 0-3.671-.992-4.933-2.078C1.797 10.889.88 9.635.43 8.957a1.62 1.62 0 0 1 0-1.798c.45-.678 1.367-1.932 2.637-3.023C4.329 2.992 6.019 2 8 2ZM8 1c-2.2 0-4.2.9-5.657 2.343 1.515 1.4 2.796 2.88 3.561 3.566A7.5 7.5 0 0 0 8 6.5a7.5 7.5 0 0 0 2.096.409c.765-.686 2.046-2.166 3.561-3.566C12.2 1.9 10.2 1 8 1Zm0 5.5a2.5 2.5 0 1 1 0 5 2.5 2.5 0 0 1 0-5Z"></path>
              </svg>
              View Team Details
            <% end %>
            <button class="btn btn-outline btn-sm" data-bs-toggle="modal" data-bs-target="#addMemberModal">
              <svg class="octicon octicon-plus mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="16" height="16">
                <path d="M8 4a.75.75 0 0 1 .75.75v2.5h2.5a.75.75 0 0 1 0 1.5h-2.5v2.5a.75.75 0 0 1-1.5 0v-2.5h-2.5a.75.75 0 0 1 0-1.5h2.5v-2.5A.75.75 0 0 1 8 4Z"></path>
              </svg>
              Manage Members
            </button>
          </div>
        </div>
      </div>

      <div class="Box mt-4">
        <div class="Box-header">
          <h3 class="Box-title">Team Structure</h3>
        </div>
        <div class="Box-body">
          <div class="d-flex flex-column gap-3">
            <div>
              <h4 class="h5 mb-2">Organization</h4>
              <p class="color-fg-muted f6 mb-0">Teams belong to organizations and help organize users and resources within that organization.</p>
            </div>
            <div>
              <h4 class="h5 mb-2">Team Leader</h4>
              <p class="color-fg-muted f6 mb-0">Optional team leader who can manage team members and resources.</p>
            </div>
            <div>
              <h4 class="h5 mb-2">Members</h4>
              <p class="color-fg-muted f6 mb-0">Users can be added to teams for collaboration and resource sharing.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Add Member Modal -->
<div class="modal fade" id="addMemberModal" tabindex="-1" aria-labelledby="addMemberModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addMemberModalLabel">Manage Team Members</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="mb-4">
          <h6>Current Members</h6>
          <% if @team.users.any? %>
            <div class="list-style-none">
              <% @team.users.each do |user| %>
                <div class="d-flex flex-items-center py-2">
                  <div class="flex-shrink-0">
                    <div class="CircleBadge CircleBadge--small bg-blue">
                      <svg class="octicon octicon-person" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="12" height="12">
                        <path d="M10.561 8.073a6.005 6.005 0 0 1 3.432 5.142.75.75 0 1 1-1.498.07 4.5 4.5 0 0 0-8.99 0 .75.75 0 0 1-1.498-.07 6.004 6.004 0 0 1 3.431-5.142 3.999 3.999 0 1 1 5.123 0ZM10.5 5a2.5 2.5 0 1 0-5 0 2.5 2.5 0 0 0 5 0Z"></path>
                      </svg>
                    </div>
                  </div>
                  <div class="flex-auto ml-3">
                    <div class="f6"><%= user.name %></div>
                    <div class="color-fg-muted f6"><%= user.email %></div>
                  </div>
                  <div class="flex-shrink-0">
                    <%= link_to remove_member_models_team_path(@team, user_id: user.id), 
                        method: :delete, 
                        class: "btn btn-sm btn-outline-danger",
                        data: { confirm: "Remove #{user.name} from this team?" } do %>
                      <svg class="octicon octicon-x" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="16" height="16">
                        <path d="M3.72 3.72a.75.75 0 0 1 1.06 0L8 6.94l3.22-3.22a.749.749 0 0 1 1.275.326.749.749 0 0 1-.215.734L9.06 8l3.22 3.22a.749.749 0 0 1-.326 1.275.749.749 0 0 1-.734-.215L8 9.06l-3.22 3.22a.751.751 0 0 1-1.042-.018.751.751 0 0 1-.018-1.042L6.94 8 3.72 4.78a.75.75 0 0 1 0-1.06Z"></path>
                      </svg>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="color-fg-muted">No members yet</p>
          <% end %>
        </div>

        <hr>

        <div>
          <h6>Add New Members</h6>
          <% available_users = User.where.not(id: @team.user_ids) %>
          <% if available_users.any? %>
            <div class="list-style-none">
              <% available_users.each do |user| %>
                <div class="d-flex flex-items-center py-2">
                  <div class="flex-shrink-0">
                    <div class="CircleBadge CircleBadge--small bg-blue">
                      <svg class="octicon octicon-person" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="12" height="12">
                        <path d="M10.561 8.073a6.005 6.005 0 0 1 3.432 5.142.75.75 0 1 1-1.498.07 4.5 4.5 0 0 0-8.99 0 .75.75 0 0 1-1.498-.07 6.004 6.004 0 0 1 3.431-5.142 3.999 3.999 0 1 1 5.123 0ZM10.5 5a2.5 2.5 0 1 0-5 0 2.5 2.5 0 0 0 5 0Z"></path>
                      </svg>
                    </div>
                  </div>
                  <div class="flex-auto ml-3">
                    <div class="f6"><%= user.name %></div>
                    <div class="color-fg-muted f6"><%= user.email %></div>
                  </div>
                  <div class="flex-shrink-0">
                    <%= link_to add_member_models_team_path(@team, user_id: user.id), 
                        method: :post, 
                        class: "btn btn-sm btn-outline",
                        data: { confirm: "Add #{user.name} to this team?" } do %>
                      <svg class="octicon octicon-plus" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="16" height="16">
                        <path d="M8 4a.75.75 0 0 1 .75.75v2.5h2.5a.75.75 0 0 1 0 1.5h-2.5v2.5a.75.75 0 0 1-1.5 0v-2.5h-2.5a.75.75 0 0 1 0-1.5h2.5v-2.5A.75.75 0 0 1 8 4Z"></path>
                      </svg>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="color-fg-muted">All users are already members of this team.</p>
          <% end %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
