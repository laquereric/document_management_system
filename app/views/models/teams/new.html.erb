<div class="container-lg px-3 py-6">
  <!-- Header -->
  <div class="d-flex flex-items-center flex-justify-between mb-4">
    <div>
      <h1 class="h2 mb-1">Create New Team</h1>
      <p class="text-gray">Add a new team to organize users and resources</p>
    </div>
    <%= link_to models_teams_path, class: "btn btn-sm btn-outline mr-3" do %>
      <svg class="octicon octicon-arrow-left mr-2" width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
        <path d="M7.78 12.53a.75.75 0 01-1.06 0L2.47 8.28a.75.75 0 010-1.06l4.25-4.25a.75.75 0 011.06 1.06L4.81 7h7.44a.75.75 0 010 1.5H4.81l2.97 2.97a.75.75 0 010 1.06z"/>
      </svg>
      Back to Teams
    <% end %>
  </div>

  <div class="row g-4">
    <div class="col-12 col-lg-8">
      <div class="Box">
        <div class="Box-header">
          <h3 class="Box-title">Team Information</h3>
        </div>
        <div class="Box-body">
          <%= form_with model: [:admin, @team], local: true do |form| %>
            <% if @team.errors.any? %>
              <div class="alert alert-danger mb-4">
                <h4 class="alert-heading">Please fix the following errors:</h4>
                <ul class="mb-0">
                  <% @team.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="row g-3">
              <div class="col-12 col-md-6">
                <div class="form-group">
                  <%= form.label :name, class: "form-label" %>
                  <%= form.text_field :name, class: "form-control #{'is-invalid' if @team.errors[:name].any?}", placeholder: "Enter team name" %>
                  <% if @team.errors[:name].any? %>
                    <div class="invalid-feedback"><%= @team.errors[:name].first %></div>
                  <% end %>
                </div>
              </div>

              <div class="col-12 col-md-6">
                <div class="form-group">
                  <%= form.label :organization_id, "Organization", class: "form-label" %>
                  <%= form.collection_select :organization_id, 
                      Organization.order(:name), 
                      :id, 
                      :name, 
                      { prompt: "Select organization" }, 
                      class: "form-select #{'is-invalid' if @team.errors[:organization_id].any?}" %>
                  <% if @team.errors[:organization_id].any? %>
                    <div class="invalid-feedback"><%= @team.errors[:organization_id].first %></div>
                  <% end %>
                </div>
              </div>

              <div class="col-12 col-md-6">
                <div class="form-group">
                  <%= form.label :leader_id, "Team Leader", class: "form-label" %>
                  <%= form.collection_select :leader_id, 
                      User.order(:name), 
                      :id, 
                      :name, 
                      { prompt: "Select team leader (optional)" }, 
                      class: "form-select #{'is-invalid' if @team.errors[:leader_id].any?}" %>
                  <% if @team.errors[:leader_id].any? %>
                    <div class="invalid-feedback"><%= @team.errors[:leader_id].first %></div>
                  <% end %>
                  <div class="form-text">Optional: Assign a team leader who can manage team resources</div>
                </div>
              </div>

              <div class="col-12">
                <div class="form-group">
                  <%= form.label :description, class: "form-label" %>
                  <%= form.text_area :description, 
                      rows: 4, 
                      class: "form-control #{'is-invalid' if @team.errors[:description].any?}", 
                      placeholder: "Describe the team's purpose and responsibilities" %>
                  <% if @team.errors[:description].any? %>
                    <div class="invalid-feedback"><%= @team.errors[:description].first %></div>
                  <% end %>
                </div>
              </div>
            </div>

            <div class="d-flex flex-items-center gap-3 mt-4">
              <%= form.submit "Create Team", class: "btn btn-primary" %>
              <%= link_to "Cancel", models_teams_path, class: "btn btn-outline" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="col-12 col-lg-4">
      <div class="Box">
        <div class="Box-header">
          <h3 class="Box-title">Team Structure</h3>
        </div>
        <div class="Box-body">
          <div class="d-flex flex-column gap-3">
            <div>
              <h4 class="h5 mb-2">Organization</h4>
              <p class="color-fg-muted f6 mb-0">Teams belong to organizations and help organize users and resources within that organization.</p>
            </div>
            <div>
              <h4 class="h5 mb-2">Team Leader</h4>
              <p class="color-fg-muted f6 mb-0">Optional team leader who can manage team members and resources.</p>
            </div>
            <div>
              <h4 class="h5 mb-2">Members</h4>
              <p class="color-fg-muted f6 mb-0">Users can be added to teams after creation for collaboration and resource sharing.</p>
            </div>
          </div>
        </div>
      </div>

      <div class="Box mt-4">
        <div class="Box-header">
          <h3 class="Box-title">Tips</h3>
        </div>
        <div class="Box-body">
          <ul class="list-style-none">
            <li class="mb-2">
              <svg class="octicon octicon-info mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="16" height="16">
                <path d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8Zm8-6.5a6.5 6.5 0 1 0 0 13 6.5 6.5 0 0 0 0-13ZM6.5 7.75A.75.75 0 0 1 7.25 7h1a.75.75 0 0 1 .75.75v2.75h.25a.75.75 0 0 1 0 1.5h-2a.75.75 0 0 1 0-1.5h.25V7.75A1.75 1.75 0 0 0 8.25 6h-1A1.75 1.75 0 0 0 5.5 7.75v1a.75.75 0 0 1-1.5 0v-1ZM8 6a1 1 0 1 1 0-2 1 1 0 0 1 0 2Z"></path>
              </svg>
              Choose a descriptive team name
            </li>
            <li class="mb-2">
              <svg class="octicon octicon-info mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="16" height="16">
                <path d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8Zm8-6.5a6.5 6.5 0 1 0 0 13 6.5 6.5 0 0 0 0-13ZM6.5 7.75A.75.75 0 0 1 7.25 7h1a.75.75 0 0 1 .75.75v2.75h.25a.75.75 0 0 1 0 1.5h-2a.75.75 0 0 1 0-1.5h.25V7.75A1.75 1.75 0 0 0 8.25 6h-1A1.75 1.75 0 0 0 5.5 7.75v1a.75.75 0 0 1-1.5 0v-1ZM8 6a1 1 0 1 1 0-2 1 1 0 0 1 0 2Z"></path>
              </svg>
              Organization assignment is required
            </li>
            <li>
              <svg class="octicon octicon-info mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="16" height="16">
                <path d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8Zm8-6.5a6.5 6.5 0 1 0 0 13 6.5 6.5 0 0 0 0-13ZM6.5 7.75A.75.75 0 0 1 7.25 7h1a.75.75 0 0 1 .75.75v2.75h.25a.75.75 0 0 1 0 1.5h-2a.75.75 0 0 1 0-1.5h.25V7.75A1.75 1.75 0 0 0 8.25 6h-1A1.75 1.75 0 0 0 5.5 7.75v1a.75.75 0 0 1-1.5 0v-1ZM8 6a1 1 0 1 1 0-2 1 1 0 0 1 0 2Z"></path>
              </svg>
              Members can be added after creation
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
