<% content_for :title, "Manage Teams" %>

<%= render(Layout::Page::PageContent.new(padding: :none)) do %>
  <!-- Page Header -->
  <%= render(Layout::Page::PageHeader.new(
    title: "Manage Teams",
    description: "Manage and organize teams across the system",
    icon: "people",
    action: {
      text: "New Team",
      url: models_new_team_path
    }
  )) %>

  <!-- Search and Filters -->
  <%= render(Layout::CardList::SearchFilterSort::SearchAndFiltersComponent.new(
    search_object: @q,
    url: models_teams_path,
    title: "Search & Filters",
    fields: [
      {
        name: :name_cont,
        label: "Team Name",
        placeholder: "Search by team name..."
      },
      {
        name: :organization_name_cont,
        label: "Organization",
        placeholder: "Search by organization..."
      }
    ]
  )) %>

  <!-- Teams Grid -->
  <%= render(Layout::CardList.new(
    cards: @teams,
    layout: :grid,
    title: "Teams",
    empty_state_title: "No teams found",
    empty_state_description: params[:q].present? ? "No teams match your search criteria. Try adjusting your filters." : "Get started by creating your first team.",
    empty_state_action: {
      text: "Create Team",
      url: models_new_team_path
    }
  )) do %>
    <% @teams.each do |team| %>
      <%= render Models::Teams::TeamCardComponent.new(team: team, current_user: current_user, admin_context: true) %>
    <% end %>
  <% end %>
<% end %>
