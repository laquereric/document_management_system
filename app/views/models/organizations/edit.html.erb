<div class="container-lg px-3 py-6">
  <!-- Header -->
  <div class="d-flex flex-items-center flex-justify-between mb-4">
    <div>
      <h1 class="h2 mb-1">Edit Organization</h1>
      <p class="text-gray">Update organization information and settings</p>
    </div>
    <div class="d-flex gap-2">
      <%= link_to models_organization_path(@organization), class: "btn btn-sm btn-outline mr-3" do %>
        <svg class="octicon octicon-eye mr-2" width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
          <path d="M1.679 7.932c.412-.621 1.242-1.75 2.366-2.717C5.175 4.242 6.527 3.5 8 3.5c1.473 0 2.824.742 3.955 1.715 1.124.967 1.954 2.096 2.366 2.717a.119.119 0 010 .136c-.412.621-1.242 1.75-2.366 2.717C10.825 11.758 9.473 12.5 8 12.5c-1.473 0-2.824-.742-3.955-1.715C2.868 9.687 2.038 8.558 1.626 7.937a.119.119 0 010-.136zM8 2c-1.981 0-3.67.992-4.933 2.078C1.797 5.169.88 6.423.43 7.1a1.619 1.619 0 000 1.798c.45.678 1.367 1.932 2.637 3.024C4.329 13.008 6.019 14 8 14c1.981 0 3.67-.992 4.933-2.078 1.27-1.091 2.187-2.345 2.637-3.023a1.619 1.619 0 000-1.798c-.45-.678-1.367-1.932-2.637-3.023C11.671 2.992 9.981 2 8 2zm0 8a2 2 0 100-4 2 2 0 000 4z"/>
        </svg>
        View Organization
      <% end %>
      <%= link_to models_organizations_path, class: "btn btn-outline" do %>
        <svg class="octicon octicon-arrow-left mr-2" width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
          <path d="M7.78 12.53a.75.75 0 01-1.06 0L2.47 8.28a.75.75 0 010-1.06l4.25-4.25a.75.75 0 011.06 1.06L4.81 7h7.44a.75.75 0 010 1.5H4.81l2.97 2.97a.75.75 0 010 1.06z"/>
        </svg>
        Back to Organizations
      <% end %>
    </div>
  </div>

  <div class="row g-4">
    <div class="col-12 col-lg-8">
      <div class="Box">
        <div class="Box-header">
          <h3 class="Box-title">Organization Information</h3>
        </div>
        <div class="Box-body">
          <%= render Models::Organization::OrganizationFormComponent.new(
            organization: @organization,
            submit_text: "Update Organization",
            cancel_url: models_organization_path(@organization)
          ) %>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="col-12 col-lg-4">
      <div class="Box">
        <div class="Box-header">
          <h3 class="Box-title">Current Organization Info</h3>
        </div>
        <div class="Box-body">
          <div class="d-flex flex-column gap-3">
            <div>
              <label class="form-label">Current Name</label>
              <div class="form-control-plaintext">
                <%= @organization.name %>
              </div>
            </div>
            <div>
              <label class="form-label">User Count</label>
              <div class="form-control-plaintext">
                <%= @organization.total_users %> users
              </div>
            </div>
            <div>
              <label class="form-label">Team Count</label>
              <div class="form-control-plaintext">
                <%= @organization.total_teams %> teams
              </div>
            </div>
            <div>
              <label class="form-label">Created</label>
              <div class="form-control-plaintext">
                <%= @organization.created_at.strftime("%B %d, %Y") %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="Box mt-4">
        <div class="Box-header">
          <h3 class="Box-title">Quick Actions</h3>
        </div>
        <div class="Box-body">
          <div class="d-flex flex-column gap-2">
            <%= link_to models_organization_path(@organization), class: "btn btn-outline btn-sm" do %>
              <svg class="octicon octicon-eye mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="16" height="16">
                <path d="M8 2c1.981 0 3.671.992 4.933 2.078 1.27 1.091 2.187 2.345 2.637 3.023a1.62 1.62 0 0 1 0 1.798c-.45.678-1.367 1.932-2.637 3.023C11.671 13.008 9.981 14 8 14c1.981 0-3.671-.992-4.933-2.078C1.797 10.889.88 9.635.43 8.957a1.62 1.62 0 0 1 0-1.798c.45-.678 1.367-1.932 2.637-3.023C4.329 2.992 6.019 2 8 2ZM8 1c-2.2 0-4.2.9-5.657 2.343 1.515 1.4 2.796 2.88 3.561 3.566A7.5 7.5 0 0 0 8 6.5a7.5 7.5 0 0 0 2.096.409c.765-.686 2.046-2.166 3.561-3.566C12.2 1.9 10.2 1 8 1Zm0 5.5a2.5 2.5 0 1 1 0 5 2.5 2.5 0 0 1 0-5Z"></path>
              </svg>
              View Organization Details
            <% end %>
            <%= link_to models_teams_path(organization_id: @organization.id), class: "btn btn-outline btn-sm" do %>
              <svg class="octicon octicon-group mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="16" height="16">
                <path d="M2 5.5a3.5 3.5 0 1 1 5.898 2.549 5.508 5.508 0 0 1 3.034 4.084.75.75 0 1 1-1.482.235 4.001 4.001 0 0 0-7.9 0 .75.75 0 0 1-1.482-.236A5.507 5.507 0 0 1 3.102 8.05 3.493 3.493 0 0 1 2 5.5ZM11 4a3.001 3.001 0 0 1 2.22 5.018 5.01 5.01 0 0 1 2.56 3.012.749.749 0 0 1-.885.954.752.752 0 0 1-.665-.57 3.51 3.51 0 0 0-2.522-2.372.75.75 0 0 1-.574-.73v-.352a.75.75 0 0 1 .416-.672A1.5 1.5 0 0 0 11 4Zm-5.5 1.5a2 2 0 1 0 0 4 2 2 0 0 0 0-4ZM9.5 6a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3Z"></path>
              </svg>
              Manage Teams
            <% end %>
          </div>
        </div>
      </div>

      <div class="Box mt-4">
        <div class="Box-header">
          <h3 class="Box-title">Organization Structure</h3>
        </div>
        <div class="Box-body">
          <div class="d-flex flex-column gap-3">
            <div>
              <h4 class="h5 mb-2">Teams</h4>
              <p class="color-fg-muted f6 mb-0">Teams organize users and resources within the organization for better collaboration.</p>
            </div>
            <div>
              <h4 class="h5 mb-2">Users</h4>
              <p class="color-fg-muted f6 mb-0">Users can belong to multiple teams and access resources based on their permissions.</p>
            </div>
            <div>
              <h4 class="h5 mb-2">Resources</h4>
              <p class="color-fg-muted f6 mb-0">Folders, documents, and tags can be organized by teams.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
