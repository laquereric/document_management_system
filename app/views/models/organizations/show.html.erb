<div class="container-lg px-3 py-6">
  <!-- Header -->
  <div class="d-flex flex-items-center flex-justify-between mb-4">
    <div>
      <h1 class="h2 mb-1"><%= @organization.name %></h1>
      <p class="text-gray">Organization details and management</p>
    </div>
    <div class="d-flex gap-2">
      <%= link_to models_organizations_path, class: "btn btn-sm btn-outline mr-3" do %>
        <svg class="octicon octicon-arrow-left mr-2" width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
          <path d="M7.78 12.53a.75.75 0 01-1.06 0L2.47 8.28a.75.75 0 010-1.06l4.25-4.25a.75.75 0 011.06 1.06L4.81 7h7.44a.75.75 0 010 1.5H4.81l2.97 2.97a.75.75 0 010 1.06z"/>
        </svg>
        Back to Organizations
      <% end %>
      <%= link_to edit_models_organization_path(@organization), class: "btn btn-outline" do %>
        <svg class="octicon octicon-pencil mr-2" width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
          <path d="M11.013 1.427a1.75 1.75 0 012.474 0l1.086 1.086a1.75 1.75 0 010 2.474l-8.61 8.61c-.21.21-.47.364-.756.445l-3.251.93a.75.75 0 01-.927-.928l.929-3.25a1.75 1.75 0 01.445-.758l8.61-8.61zm1.414 1.06a.25.25 0 00-.354 0L10.811 3.75l1.439 1.44 1.263-1.263a.25.25 0 000-.354l-1.086-1.086zM11.189 6.25L9.75 4.81l-6.286 6.287a.25.25 0 00-.064.108l-.558 1.953 1.953-.558a.249.249 0 00.108-.064l6.286-6.286z"/>
        </svg>
        Edit Organization
      <% end %>
      <%= link_to models_organization_path(@organization),
          method: :delete,
          data: { confirm: "Are you sure you want to delete this organization? This action cannot be undone." },
          class: "btn btn-danger" do %>
        <svg class="octicon octicon-trash mr-2" width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
          <path d="M10.5 4.5a.75.75 0 00-1.5 0v1h-3v-1a.75.75 0 00-1.5 0v1h-2.25a.75.75 0 000 1.5H2v8.25c0 .966.784 1.75 1.75 1.75h8.5A1.75 1.75 0 0014 15.25V7h.75a.75.75 0 000-1.5H12.5v-1zM11 7v8.25a.25.25 0 01-.25.25h-8.5A.25.25 0 013 15.25V7h8z"/>
        </svg>
        Delete Organization
      <% end %>
    </div>
  </div>

  <div class="row g-4">
    <!-- Organization Information -->
    <div class="col-12 col-lg-8">
      <div class="Box">
        <div class="Box-header">
          <h3 class="Box-title">Organization Information</h3>
        </div>
        <div class="Box-body">
          <div class="row g-3">
            <div class="col-12 col-md-6">
              <div class="form-group">
                <label class="form-label">Organization Name</label>
                <div class="form-control-plaintext"><%= @organization.name %></div>
              </div>
            </div>
            <div class="col-12 col-md-6">
              <div class="form-group">
                <label class="form-label">Created</label>
                <div class="form-control-plaintext"><%= @organization.created_at.strftime("%B %d, %Y at %I:%M %p") %></div>
              </div>
            </div>
            <div class="col-12">
              <div class="form-group">
                <label class="form-label">Description</label>
                <div class="form-control-plaintext"><%= @organization.description %></div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Organization Statistics -->
      <div class="Box mt-4">
        <div class="Box-header">
          <h3 class="Box-title">Statistics</h3>
        </div>
        <div class="Box-body">
          <div class="row g-4">
            <div class="col-12 col-md-6 col-lg-3">
              <div class="d-flex flex-column align-items-center text-center">
                <div class="CircleBadge CircleBadge--large bg-blue mb-2">
                  <svg class="octicon octicon-people" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="20" height="20">
                    <path d="M2 5.5a3.5 3.5 0 1 1 5.898 2.549 5.508 5.508 0 0 1 3.034 4.084.75.75 0 1 1-1.482.235 4.001 4.001 0 0 0-7.9 0 .75.75 0 0 1-1.482-.236A5.507 5.507 0 0 1 3.102 8.05 3.493 3.493 0 0 1 2 5.5ZM11 4a3.001 3.001 0 0 1 2.22 5.018 5.01 5.01 0 0 1 2.56 3.012.749.749 0 0 1-.885.954.752.752 0 0 1-.665-.57 3.51 3.51 0 0 0-2.522-2.372.75.75 0 0 1-.574-.73v-.352a.75.75 0 0 1 .416-.672A1.5 1.5 0 0 0 11 4Zm-5.5 1.5a2 2 0 1 0 0 4 2 2 0 0 0 0-4ZM9.5 6a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3Z"></path>
                  </svg>
                </div>
                <div class="h3 mb-1"><%= @organization.total_users %></div>
                <div class="color-fg-muted">Users</div>
              </div>
            </div>
            <div class="col-12 col-md-6 col-lg-3">
              <div class="d-flex flex-column align-items-center text-center">
                <div class="CircleBadge CircleBadge--large bg-green mb-2">
                  <svg class="octicon octicon-group" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="20" height="20">
                    <path d="M2 5.5a3.5 3.5 0 1 1 5.898 2.549 5.508 5.508 0 0 1 3.034 4.084.75.75 0 1 1-1.482.235 4.001 4.001 0 0 0-7.9 0 .75.75 0 0 1-1.482-.236A5.507 5.507 0 0 1 3.102 8.05 3.493 3.493 0 0 1 2 5.5ZM11 4a3.001 3.001 0 0 1 2.22 5.018 5.01 5.01 0 0 1 2.56 3.012.749.749 0 0 1-.885.954.752.752 0 0 1-.665-.57 3.51 3.51 0 0 0-2.522-2.372.75.75 0 0 1-.574-.73v-.352a.75.75 0 0 1 .416-.672A1.5 1.5 0 0 0 11 4Zm-5.5 1.5a2 2 0 1 0 0 4 2 2 0 0 0 0-4ZM9.5 6a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3Z"></path>
                  </svg>
                </div>
                <div class="h3 mb-1"><%= @organization.total_teams %></div>
                <div class="color-fg-muted">Teams</div>
              </div>
            </div>
            <div class="col-12 col-md-6 col-lg-3">
              <div class="d-flex flex-column align-items-center text-center">
                <div class="CircleBadge CircleBadge--large bg-purple mb-2">
                  <svg class="octicon octicon-tag" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="20" height="20">
                    <path d="M2.5 7.775V2.75a.25.25 0 0 1 .25-.25h5.025a.25.25 0 0 1 .177.073l6.25 6.25a.25.25 0 0 1 0 .354l-5.025 5.025a.25.25 0 0 1-.354 0l-6.25-6.25a.25.25 0 0 1-.073-.177Zm-1.5 0V2.75C1 1.784 1.784 1 2.75 1h5.025c.464 0 .909.184 1.237.513l6.25 6.25a1.75 1.75 0 0 1 0 2.474l-5.026 5.026a1.75 1.75 0 0 1-2.474 0l-6.25-6.25A1.75 1.75 0 0 1 1 7.775Z M6 5a1 1 0 1 1 0-2 1 1 0 0 1 0 2Z"></path>
                  </svg>
                </div>
                <div class="h3 mb-1"><%= @organization.total_tags %></div>
                <div class="color-fg-muted">Tags</div>
              </div>
            </div>
            <div class="col-12 col-md-6 col-lg-3">
              <div class="d-flex flex-column align-items-center text-center">
                <div class="CircleBadge CircleBadge--large bg-orange mb-2">
                  <svg class="octicon octicon-calendar" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="20" height="20">
                    <path d="M4.75 0a.75.75 0 0 1 .75.75V2h5V.75a.75.75 0 0 1 1.5 0V2h1.25c.966 0 1.75.784 1.75 1.75v10.5A1.75 1.75 0 0 1 13.25 16H2.75A1.75 1.75 0 0 1 1 14.25V3.75C1 2.784 1.784 2 2.75 2H4V.75A.75.75 0 0 1 4.75 0ZM3.5 3.75v10.5c0 .138.112.25.25.25h10.5a.25.25 0 0 0 .25-.25V3.75a.25.25 0 0 0-.25-.25H3.75a.25.25 0 0 0-.25.25ZM6 6.75A.75.75 0 0 1 6.75 6h2.5a.75.75 0 0 1 0 1.5h-2.5A.75.75 0 0 1 6 6.75ZM6 9.75A.75.75 0 0 1 6.75 9h2.5a.75.75 0 0 1 0 1.5h-2.5A.75.75 0 0 1 6 9.75ZM6.75 12a.75.75 0 0 0 0 1.5h2.5a.75.75 0 0 0 0-1.5h-2.5Z"></path>
                  </svg>
                </div>
                <div class="h3 mb-1"><%= time_ago_in_words(@organization.created_at) %></div>
                <div class="color-fg-muted">Days Active</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="col-12 col-lg-4">
      <!-- Quick Actions -->
      <div class="Box mb-4">
        <div class="Box-header">
          <h3 class="Box-title">Quick Actions</h3>
        </div>
        <div class="Box-body">
          <div class="d-flex flex-column gap-2">
            <%= link_to models_teams_path(organization_id: @organization.id), class: "btn btn-outline btn-sm" do %>
              <svg class="octicon octicon-group mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="16" height="16">
                <path d="M2 5.5a3.5 3.5 0 1 1 5.898 2.549 5.508 5.508 0 0 1 3.034 4.084.75.75 0 1 1-1.482.235 4.001 4.001 0 0 0-7.9 0 .75.75 0 0 1-1.482-.236A5.507 5.507 0 0 1 3.102 8.05 3.493 3.493 0 0 1 2 5.5ZM11 4a3.001 3.001 0 0 1 2.22 5.018 5.01 5.01 0 0 1 2.56 3.012.749.749 0 0 1-.885.954.752.752 0 0 1-.665-.57 3.51 3.51 0 0 0-2.522-2.372.75.75 0 0 1-.574-.73v-.352a.75.75 0 0 1 .416-.672A1.5 1.5 0 0 0 11 4Zm-5.5 1.5a2 2 0 1 0 0 4 2 2 0 0 0 0-4ZM9.5 6a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3Z"></path>
              </svg>
              View Teams
            <% end %>
            <%= link_to models_users_path(organization_id: @organization.id), class: "btn btn-outline btn-sm" do %>
              <svg class="octicon octicon-people mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="16" height="16">
                <path d="M2 5.5a3.5 3.5 0 1 1 5.898 2.549 5.508 5.508 0 0 1 3.034 4.084.75.75 0 1 1-1.482.235 4.001 4.001 0 0 0-7.9 0 .75.75 0 0 1-1.482-.236A5.507 5.507 0 0 1 3.102 8.05 3.493 3.493 0 0 1 2 5.5ZM11 4a3.001 3.001 0 0 1 2.22 5.018 5.01 5.01 0 0 1 2.56 3.012.749.749 0 0 1-.885.954.752.752 0 0 1-.665-.57 3.51 3.51 0 0 0-2.522-2.372.75.75 0 0 1-.574-.73v-.352a.75.75 0 0 1 .416-.672A1.5 1.5 0 0 0 11 4Zm-5.5 1.5a2 2 0 1 0 0 4 2 2 0 0 0 0-4ZM9.5 6a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3Z"></path>
              </svg>
              View Users
            <% end %>
          </div>
        </div>
      </div>

      <!-- Organization Structure -->
      <div class="Box">
        <div class="Box-header">
          <h3 class="Box-title">Organization Structure</h3>
        </div>
        <div class="Box-body">
          <div class="d-flex flex-column gap-3">
            <div>
              <h4 class="h5 mb-2">Teams</h4>
              <p class="color-fg-muted f6 mb-0">Teams organize users and resources within the organization for better collaboration.</p>
            </div>
            <div>
              <h4 class="h5 mb-2">Users</h4>
              <p class="color-fg-muted f6 mb-0">Users can belong to multiple teams and access resources based on their permissions.</p>
            </div>
            <div>
              <h4 class="h5 mb-2">Tags</h4>
              <p class="color-fg-muted f6 mb-0">Tags help organize and categorize content across the organization.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
