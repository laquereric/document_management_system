<div class="container-lg px-3 py-6">
  <!-- Header -->
  <div class="d-flex flex-items-center flex-justify-between mb-4">
    <div>
      <h1 class="h2 mb-1">Create New User</h1>
      <p class="text-gray">Add a new user to the system</p>
    </div>
    <%= link_to models_users_path, class: "btn btn-sm btn-outline mr-3" do %>
      <svg class="octicon octicon-arrow-left mr-2" width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
        <path d="M7.78 12.53a.75.75 0 01-1.06 0L2.47 8.28a.75.75 0 010-1.06l4.25-4.25a.75.75 0 011.06 1.06L4.81 7h7.44a.75.75 0 010 1.5H4.81l2.97 2.97a.75.75 0 010 1.06z"/>
      </svg>
      Back to Users
    <% end %>
  </div>

  <div class="row g-4">
    <div class="col-12 col-lg-8">
      <div class="Box">
        <div class="Box-header">
          <h3 class="Box-title">User Information</h3>
        </div>
        <div class="Box-body">
          <%= form_with model: [:admin, @user], local: true do |form| %>
            <% if @user.errors.any? %>
              <div class="alert alert-danger mb-4">
                <h4 class="alert-heading">Please fix the following errors:</h4>
                <ul class="mb-0">
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="row g-3">
              <div class="col-12 col-md-6">
                <div class="form-group">
                  <%= form.label :name, class: "form-label" %>
                  <%= form.text_field :name, class: "form-control #{'is-invalid' if @user.errors[:name].any?}", placeholder: "Enter full name" %>
                  <% if @user.errors[:name].any? %>
                    <div class="invalid-feedback"><%= @user.errors[:name].first %></div>
                  <% end %>
                </div>
              </div>

              <div class="col-12 col-md-6">
                <div class="form-group">
                  <%= form.label :email, class: "form-label" %>
                  <%= form.email_field :email, class: "form-control #{'is-invalid' if @user.errors[:email].any?}", placeholder: "Enter email address" %>
                  <% if @user.errors[:email].any? %>
                    <div class="invalid-feedback"><%= @user.errors[:email].first %></div>
                  <% end %>
                </div>
              </div>

              <div class="col-12 col-md-6">
                <div class="form-group">
                  <%= form.label :role, class: "form-label" %>
                  <%= form.select :role, 
                      options_for_select([['Member', 'member'], ['Team Leader', 'team_leader'], ['Admin', 'admin']], @user.role), 
                      {}, 
                      class: "form-select #{'is-invalid' if @user.errors[:role].any?}" %>
                  <% if @user.errors[:role].any? %>
                    <div class="invalid-feedback"><%= @user.errors[:role].first %></div>
                  <% end %>
                </div>
              </div>

              <div class="col-12 col-md-6">
                <div class="form-group">
                  <%= form.label :organization_id, "Organization", class: "form-label" %>
                  <%= form.collection_select :organization_id, 
                      Organization.order(:name), 
                      :id, 
                      :name, 
                      { prompt: "Select organization (optional)" }, 
                      class: "form-select #{'is-invalid' if @user.errors[:organization_id].any?}" %>
                  <% if @user.errors[:organization_id].any? %>
                    <div class="invalid-feedback"><%= @user.errors[:organization_id].first %></div>
                  <% end %>
                </div>
              </div>


            </div>

            <div class="d-flex flex-items-center gap-3 mt-4">
              <%= form.submit "Create User", class: "btn btn-primary" %>
              <%= link_to "Cancel", models_users_path, class: "btn btn-outline" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="col-12 col-lg-4">
      <div class="Box">
        <div class="Box-header">
          <h3 class="Box-title">Role Information</h3>
        </div>
        <div class="Box-body">
          <div class="d-flex flex-column gap-3">
            <div>
              <h4 class="h5 mb-2">Member</h4>
              <p class="color-fg-muted f6 mb-0">Basic user with access to documents and folders within their teams.</p>
            </div>
            <div>
              <h4 class="h5 mb-2">Team Leader</h4>
              <p class="color-fg-muted f6 mb-0">Can manage team members and team resources.</p>
            </div>
            <div>
              <h4 class="h5 mb-2">Admin</h4>
              <p class="color-fg-muted f6 mb-0">Full system access including user management and system settings.</p>
            </div>
          </div>
        </div>
      </div>

      <div class="Box mt-4">
        <div class="Box-header">
          <h3 class="Box-title">Tips</h3>
        </div>
        <div class="Box-body">
          <ul class="list-style-none">

            <li class="mb-2">
              <svg class="octicon octicon-info mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="16" height="16">
                <path d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8Zm8-6.5a6.5 6.5 0 1 0 0 13 6.5 6.5 0 0 0 0-13ZM6.5 7.75A.75.75 0 0 1 7.25 7h1a.75.75 0 0 1 .75.75v2.75h.25a.75.75 0 0 1 0 1.5h-2a.75.75 0 0 1 0-1.5h.25V7.75A1.75 1.75 0 0 0 8.25 6h-1A1.75 1.75 0 0 0 5.5 7.75v1a.75.75 0 0 1-1.5 0v-1ZM8 6a1 1 0 1 1 0-2 1 1 0 0 1 0 2Z"></path>
              </svg>
              Organization assignment is optional
            </li>
            <li>
              <svg class="octicon octicon-info mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="16" height="16">
                <path d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8Zm8-6.5a6.5 6.5 0 1 0 0 13 6.5 6.5 0 0 0 0-13ZM6.5 7.75A.75.75 0 0 1 7.25 7h1a.75.75 0 0 1 .75.75v2.75h.25a.75.75 0 0 1 0 1.5h-2a.75.75 0 0 1 0-1.5h.25V7.75A1.75 1.75 0 0 0 8.25 6h-1A1.75 1.75 0 0 0 5.5 7.75v1a.75.75 0 0 1-1.5 0v-1ZM8 6a1 1 0 1 1 0-2 1 1 0 0 1 0 2Z"></path>
              </svg>
              Role can be changed later from user management
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
