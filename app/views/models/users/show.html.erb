<% content_for :title, @user.name %>

<%= render(Layout::Page::PageContent.new(padding: :none)) do %>
  <!-- Page Header -->
  <%= render(Layout::Page::UserProfileHeaderComponent.new(
    user: @user,
    current_user: current_user
  )) %>

  <div class="d-lg-flex" style="gap: 24px;">
    <!-- Main Content -->
    <div class="flex-1">
      <!-- User Information -->
      <%= render(Layout::Page::UserInformationComponent.new(
        user: @user,
        current_user: current_user
      )) %>

      <!-- User Statistics -->
      <div class="mt-4">
        <%= render(Layout::Page::UserStatisticsComponent.new(user: @user)) %>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="flex-1" style="min-width: 300px;">
      <!-- Teams -->
      <div class="mb-4">
        <%= render(Layout::Page::UserTeamsComponent.new(user: @user)) %>
      </div>

      <!-- Role Management -->
      <div class="mb-4">
        <%= render(Layout::Page::UserRoleManagementComponent.new(
          user: @user,
          current_user: current_user
        )) %>
      </div>

      <!-- Recent Activity -->
      <%= render(Layout::Page::UserRecentActivityComponent.new(user: @user)) %>
    </div>
  </div>
<% end %>
