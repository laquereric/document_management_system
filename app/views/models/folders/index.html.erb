<% content_for :title, "Folders" %>

<%= render(Layout::Page::PageContent.new(padding: :none)) do %>
  <!-- Page Header -->
  <%= render(Layout::Page::PageHeader.new(
    title: "Folders",
    description: "Manage and organize your document folders",
    icon: "file-directory",
    action: {
      text: "New Folder",
      url: models_new_folder_path
    }
  )) %>

  <!-- Statistics Cards -->
  <%= render(Layout::CardList::Statistics::StatisticsGridComponent.new(
    title: "Folder Overview",
    statistics: [
      {
        title: "Total Folders",
        value: @folders.respond_to?(:total_count) ? @folders.total_count : @folders.count,
        icon: "file-directory",
        color: "accent"
      },
      {
        title: "With Documents",
        value: Folder.joins(:documents).distinct.count,
        icon: "file-directory-fill",
        color: "success"
      },
      {
        title: "Active Teams",
        value: Team.joins(:folders).distinct.count,
        icon: "organization",
        color: "attention"
      },
      {
        title: "This Week",
        value: Folder.where('created_at >= ?', 7.days.ago).count,
        icon: "calendar",
        color: "done"
      }
    ]
  )) %>

  <!-- Search & Filters Section -->
  <div class="mt-5">
    <h2 class="f4 text-semibold mb-3">Search & Filters</h2>
    <div class="Box">
      <div class="Box-body">
        <%= search_form_for @q, url: models_folders_path, method: :get, class: "d-flex flex-items-center gap-3" do |f| %>
          <div class="flex-1">
            <%= f.label :name_cont, "Name", class: "form-label sr-only" %>
            <%= f.text_field :name_cont, class: "form-control", placeholder: "Search folders..." %>
          </div>
          <div class="flex-1">
            <%= f.label :team_name_cont, "Team", class: "form-label sr-only" %>
            <%= f.text_field :team_name_cont, class: "form-control", placeholder: "Filter by team..." %>
          </div>
          <div>
            <%= f.submit "Search", class: "btn btn-primary" %>
          </div>
          <div>
            <%= link_to "Clear", models_folders_path, class: "btn" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Folders Section -->
  <div class="mt-5">
    <div class="d-flex flex-items-center flex-justify-between mb-3">
      <h2 class="f4 text-semibold">
        All Folders
        <% if @folders.respond_to?(:total_count) %>
          <span class="Counter"><%= @folders.total_count %></span>
        <% else %>
          <span class="Counter"><%= @folders.count %></span>
        <% end %>
        <% if params[:q]&.values&.any?(&:present?) %>
          <span class="color-fg-muted f5">found</span>
        <% end %>
      </h2>
    </div>

    <div class="Box">
      <div class="Box-body">
        <% if @folders.any? %>
          <div class="d-flex flex-wrap gap-3">
            <% @folders.each do |folder| %>
              <div class="flex-auto" style="min-width: 300px; max-width: 400px;">
                <%= render(Models::Folder::CardComponent.new(folder: folder)) %>
              </div>
            <% end %>
          </div>

          <!-- Pagination -->
          <% if @folders.respond_to?(:current_page) %>
            <div class="d-flex flex-justify-center mt-4">
              <nav class="paginate-container" aria-label="Pagination">
                <div class="pagination">
                  <% if @folders.prev_page %>
                    <%= link_to "Previous", url_for(page: @folders.prev_page), class: "previous_page", rel: "prev" %>
                  <% else %>
                    <span class="previous_page disabled">Previous</span>
                  <% end %>
                  
                  <% @folders.total_pages.times do |page_num| %>
                    <% page_num += 1 %>
                    <% if page_num == @folders.current_page %>
                      <em class="current"><%= page_num %></em>
                    <% elsif page_num == 1 || page_num == @folders.total_pages || (page_num >= @folders.current_page - 2 && page_num <= @folders.current_page + 2) %>
                      <%= link_to page_num, url_for(page: page_num) %>
                    <% elsif page_num == @folders.current_page - 3 || page_num == @folders.current_page + 3 %>
                      <span class="gap">â€¦</span>
                    <% end %>
                  <% end %>
                  
                  <% if @folders.next_page %>
                    <%= link_to "Next", url_for(page: @folders.next_page), class: "next_page", rel: "next" %>
                  <% else %>
                    <span class="next_page disabled">Next</span>
                  <% end %>
                </div>
              </nav>
            </div>
          <% end %>
        <% else %>
          <%= render(Ui::EmptyStateComponent.new(
            title: "No folders found",
            description: params[:q]&.values&.any?(&:present?) ? 
              "Try adjusting your search criteria" : 
              "Get started by creating your first folder",
            icon: "file-directory",
            action: {
              text: "Create Folder",
              url: models_new_folder_path
            }
          )) %>
        <% end %>
      </div>
    </div>
  </div>
</div>
