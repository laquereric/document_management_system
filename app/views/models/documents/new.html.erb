<% content_for :title, "New Document" %>

<%= render Layout::Page::PageContent.new do %>
  <!-- Page Header -->
  <%= render Layout::Page::PageHeader.new(
    title: "New Document",
    description: @folder.present? ? "Create a new document in #{@folder.name}" : "Create a new document",
    icon: "file-plus",
    breadcrumb_items: [
      { text: "Documents", url: models_documents_path },
      { text: "New Document", url: "#" }
    ]
  ) do %>
    <%= render Primer::Beta::Button.new(
      tag: :a,
      href: models_documents_path
    ) do %>
      <%= render Primer::Beta::Octicon.new(icon: "arrow-left", size: :small, classes: "mr-1") %>
      Back to Documents
    <% end %>
  <% end %>

  <!-- Form -->
  <%= render Models::Documents::DocumentFormComponent.new(
    document: @document,
    submit_text: "Create Document",
    cancel_url: models_documents_path
  ) %>
<% end %>
