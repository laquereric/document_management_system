<% content_for :title, "Edit #{@document.title}" %>

<%= render Layout::Page::PageContent.new do %>
  <!-- Page Header -->
  <%= render Layout::Page::PageHeader.new(
    title: "Edit Document",
    description: @document.title,
    icon: "pencil",
    breadcrumb_items: [
      { text: "Documents", url: models_documents_path },
      { text: @document.title, url: models_document_path(@document) },
      { text: "Edit", url: "#" }
    ]
  ) do %>
    <%= render Primer::Beta::Button.new(
      tag: :a,
      href: models_document_path(@document)
    ) do %>
      <%= render Primer::Beta::Octicon.new(icon: "arrow-left", size: :small, classes: "mr-1") %>
      Back to Document
    <% end %>
  <% end %>

  <!-- Form -->
  <%= render Models::Documents::DocumentFormComponent.new(
    document: @document,
    submit_text: "Update Document",
    cancel_url: models_document_path(@document)
  ) %>
<% end %>
