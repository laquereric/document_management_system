<% content_for :title, @document.title %>

<div class="container-fluid">
  <div class="row">
    <!-- Sidebar -->
    <div class="col-md-3">
      <%= render(Layout::Navigation::SidebarComponent.new(controller_name: @controller_name,current_user: current_user)) %>
    </div>
    
    <!-- Main Content -->
    <div class="col-md-9">
      <!-- Header -->
      <%= render(Layout::Navigation::HeaderComponent.new(current_user: current_user)) %>
      
      <!-- Breadcrumbs -->
      <%= render(Layout::Navigation::BreadcrumbComponent.new(
        items: [
          { text: "Home", url: root_path },
          { text: @document.folder.team.organization.name, url: models_organization_path(@document.folder.team.organization) },
                      { text: @document.folder.team.name, url: models_team_path(@document.folder.team) },
                      { text: @document.folder.name, url: models_folder_path(@document.folder) },
          { text: @document.title, url: "#" }
        ]
      )) %>
      
      <!-- Document Header -->
      <div class="row mb-4">
        <div class="col-12">
          <div class="d-flex justify-content-between align-items-start">
            <div>
              <h1 class="mb-2"><%= @document.title %></h1>
              <div class="d-flex align-items-center gap-3 text-muted">
                <span>
                  <i class="bi bi-person"></i> <%= @document.author.name %>
                </span>
                <span>
                  <i class="bi bi-folder"></i> <%= @document.folder.name %>
                </span>
                <span>
                  <i class="bi bi-clock"></i> <%= time_ago_in_words(@document.created_at) %> ago
                </span>
              </div>
            </div>
            <div class="d-flex gap-2">
              <%= render(Ui::StatusBadgeComponent.new(status: @document.status)) %>
              <%= link_to "Edit", models_edit_document_path(@document), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Document Content and Metadata -->
      <div class="row">
        <!-- Main Content -->
        <div class="col-md-8">
          <div class="card mb-4">
            <div class="card-header">
              <h5 class="mb-0">Content</h5>
            </div>
            <div class="card-body">
              <div class="document-content">
                <%= simple_format(@document.content) %>
              </div>
            </div>
          </div>
          
          <!-- Tags -->
          <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
              <h5 class="mb-0">Tags</h5>
              <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#addTagModal">
                <i class="bi bi-plus"></i> Add Tag
              </button>
            </div>
            <div class="card-body">
              <% if @document.tags.any? %>
                <% @document.tags.each do |tag| %>
                  <%= render(Models::Tags::TagItemComponent.new(
                    tag: tag,
                    removable: true,
                    document: @document
                  )) %>
                <% end %>
              <% else %>
                <p class="text-muted mb-0">No tags added yet.</p>
              <% end %>
            </div>
          </div>
          
          <!-- Activity Log -->
          <div class="card">
            <div class="card-header">
              <h5 class="mb-0">Activity</h5>
            </div>
            <div class="card-body">
                      <% if @activities.any? %>
          <% @activities.each do |activity| %>
                                      <%= render(Models::Activities::ActivityItemComponent.new(activity: activity)) %>
                <% end %>
              <% else %>
                <%= render(Ui::EmptyStateComponent.new(
                  title: "No Activity",
                  description: "No activity has been recorded for this document yet.",
                  icon: "activity"
                )) %>
              <% end %>
            </div>
          </div>
        </div>
        
        <!-- Sidebar -->
        <div class="col-md-4">
          <!-- Document Actions -->
          <div class="card mb-4">
            <div class="card-header">
              <h5 class="mb-0">Actions</h5>
            </div>
            <div class="card-body">
              <%= render(Layout::Card::ActionsMenuComponent.new(resource: @document, resource_type: 'document')) %>
            </div>
          </div>
          
          <!-- Document Metadata -->
          <div class="card mb-4">
            <div class="card-header">
              <h5 class="mb-0">Details</h5>
            </div>
            <div class="card-body">
              <dl class="row mb-0">
                <dt class="col-sm-4">Status</dt>
                <dd class="col-sm-8">
                  <%= render(Ui::StatusBadgeComponent.new(status: @document.status)) %>
                </dd>
                
                <dt class="col-sm-4">Scenario</dt>
                <dd class="col-sm-8"><%= @document.scenario.name %></dd>
                
                <dt class="col-sm-4">Created</dt>
                <dd class="col-sm-8"><%= @document.created_at.strftime("%B %d, %Y") %></dd>
                
                <dt class="col-sm-4">Updated</dt>
                <dd class="col-sm-8"><%= @document.updated_at.strftime("%B %d, %Y") %></dd>
                
                <% if @document.file.attached? %>
                  <dt class="col-sm-4">File</dt>
                  <dd class="col-sm-8">
                    <%= link_to @document.file.filename, rails_blob_path(@document.file, disposition: "attachment"), class: "text-decoration-none" %>
                    <br>
                    <small class="text-muted">
                      <%= number_to_human_size(@document.file.byte_size) %> â€¢ 
                      <%= @document.file.content_type %>
                    </small>
                  </dd>
                <% end %>
              </dl>
            </div>
          </div>
          
          <!-- Related Documents -->
          <div class="card">
            <div class="card-header">
              <h5 class="mb-0">Related Documents</h5>
            </div>
            <div class="card-body">
              <% related_docs = @document.folder.documents.where.not(id: @document.id).limit(5) %>
              <% if related_docs.any? %>
                <% related_docs.each do |doc| %>
                  <div class="d-flex justify-content-between align-items-center border-bottom py-2">
                    <div>
                      <h6 class="mb-1">
                        <%= link_to doc.title, doc, class: "text-decoration-none" %>
                      </h6>
                      <small class="text-muted">
                        <%= render(Ui::StatusBadgeComponent.new(status: doc.status)) %>
                      </small>
                    </div>
                    <small class="text-muted">
                      <%= time_ago_in_words(doc.updated_at) %> ago
                    </small>
                  </div>
                <% end %>
              <% else %>
                <p class="text-muted mb-0">No other documents in this folder.</p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Add Tag Modal -->
<div class="modal fade" id="addTagModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add Tag</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
              <%= form_with url: add_tag_models_document_path(@document), method: :post, local: true do |form| %>
        <div class="modal-body">
          <div class="mb-3">
            <%= form.label :tag_id, "Select Tag", class: "form-label" %>
            <%= form.select :tag_id,
                options_from_collection_for_select(Tag.all, :id, :name),
                { prompt: "Choose a tag" },
                { class: "form-select", required: true } %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <%= form.submit "Add Tag", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
