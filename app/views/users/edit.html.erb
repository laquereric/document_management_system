<div class="container-lg px-3 py-4">
  <div class="d-flex flex-items-center flex-justify-between mb-4">
    <div>
      <h1 class="h2 mb-1">Edit Profile</h1>
      <p class="text-gray">Update your account information</p>
    </div>
    <%= link_to user_path(@user), class: "btn btn-outline" do %>
      <svg class="octicon octicon-arrow-left mr-2" width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
        <path d="M7.78 12.53a.75.75 0 01-1.06 0L2.47 8.28a.75.75 0 010-1.06l4.25-4.25a.75.75 0 011.06 1.06L4.81 7h7.44a.75.75 0 010 1.5H4.81l2.97 2.97a.75.75 0 010 1.06z"/>
      </svg>
      Back to Profile
    <% end %>
  </div>

  <div class="Layout Layout--sidebarPosition-start Layout--sidebar-narrow">
    <div class="Layout-main">
      <div class="Box">
        <div class="Box-header">
          <h3 class="Box-title">Profile Information</h3>
        </div>
        <div class="Box-body">
          <%= form_with model: @user, local: true, class: "form" do |form| %>
            <% if @user.errors.any? %>
              <div class="flash flash-error mb-3">
                <h4 class="flash-heading">Please correct the following errors:</h4>
                <ul class="list-style-none">
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group">
              <%= form.label :name, class: "form-label" %>
              <%= form.text_field :name, class: "form-control", placeholder: "Enter your full name" %>
            </div>

            <div class="form-group">
              <%= form.label :email, class: "form-label" %>
              <%= form.email_field :email, class: "form-control", placeholder: "Enter your email address" %>
            </div>

            <% if current_user.admin? %>
              <div class="form-group">
                <%= form.label :role, class: "form-label" %>
                <%= form.select :role, User.roles.keys.map { |role| [role.titleize, role] }, {}, class: "form-select" %>
              </div>

              <div class="form-group">
                <%= form.label :organization_id, "Organization", class: "form-label" %>
                <%= form.collection_select :organization_id, Organization.all, :id, :name, { prompt: "Select an organization" }, class: "form-select" %>
              </div>
            <% end %>

            <div class="form-group">
              <%= form.label :password, "New Password (leave blank to keep current)", class: "form-label" %>
              <%= form.password_field :password, class: "form-control", placeholder: "Enter new password" %>
            </div>

            <div class="form-group">
              <%= form.label :password_confirmation, "Confirm New Password", class: "form-label" %>
              <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Confirm new password" %>
            </div>

            <div class="form-actions">
              <%= form.submit "Update Profile", class: "btn btn-primary" %>
              <%= link_to "Cancel", user_path(@user), class: "btn" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="Layout-sidebar">
      <div class="Box">
        <div class="Box-header">
          <h3 class="Box-title">Profile Tips</h3>
        </div>
        <div class="Box-body">
          <ul class="list-style-none">
            <li class="mb-2">
              <svg class="octicon octicon-info mr-2" width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                <path d="M0 8a8 8 0 1116 0A8 8 0 010 8zm1.5 0a6.5 6.5 0 1013 0 6.5 6.5 0 00-13 0zM8 4a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 018 4zm0 8a1 1 0 100-2 1 1 0 000 2z"/>
              </svg>
              Keep your profile information up to date
            </li>
            <li class="mb-2">
              <svg class="octicon octicon-shield-check mr-2" width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"/>
              </svg>
              Use a strong password for security
            </li>
            <li>
              <svg class="octicon octicon-people mr-2" width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                <path d="M2 5.5a3.5 3.5 0 101.665 2.95L8.585 10l-.665.665 1.948 1.948a3.5 3.5 0 101.414-1.414l1.948-1.948L10 8.585l-1.55 1.665a3.5 3.5 0 10-2.95-1.665H2zM5.5 12a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zm4.5-1.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0z"/>
              </svg>
              Your team memberships are managed separately
            </li>
          </ul>
        </div>
      </div>

      <div class="Box">
        <div class="Box-header">
          <h3 class="Box-title">Quick Actions</h3>
        </div>
        <div class="Box-body">
          <div class="d-flex flex-column gap-2">
            <%= link_to user_path(@user), class: "btn btn-outline btn-sm" do %>
              <svg class="octicon octicon-eye mr-2" width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                <path d="M1.679 7.932c.412-.621 1.242-1.75 2.366-2.717C5.175 4.242 6.527 3.5 8 3.5c1.473 0 2.824.742 3.955 1.715 1.124.967 1.954 2.096 2.366 2.717a.119.119 0 010 .136c-.412.621-1.242 1.75-2.366 2.717C10.825 11.758 9.473 12.5 8 12.5c-1.473 0-2.824-.742-3.955-1.715C2.868 9.687 2.038 8.558 1.626 7.937a.119.119 0 010-.136zM8 2c-1.981 0-3.67.992-4.933 2.078C1.797 5.169.88 6.423.43 7.1a1.619 1.619 0 000 1.798c.45.678 1.367 1.932 2.637 3.024C4.329 13.008 6.019 14 8 14c1.981 0 3.67-.992 4.933-2.078 1.27-1.091 2.187-2.345 2.637-3.023a1.619 1.619 0 000-1.798c-.45-.678-1.367-1.932-2.637-3.023C11.671 2.992 9.981 2 8 2zm0 8a2 2 0 100-4 2 2 0 000 4z"/>
              </svg>
              View Profile
            <% end %>
            <%= link_to documents_path(author: @user.id), class: "btn btn-outline btn-sm" do %>
              <svg class="octicon octicon-file mr-2" width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                <path d="M3.75 1.5a.25.25 0 00-.25.25v11.5c0 .138.112.25.25.25h8.5a.25.25 0 00.25-.25V6H9.75A1.75 1.75 0 018 4.25V1.5H3.75zm5.75.56v2.19c0 .138.112.25.25.25h2.19L9.5 2.06zM2 1.75C2 .784 2.784 0 3.75 0h5.086c.464 0 .909.184 1.237.513l3.414 3.414c.329.328.513.773.513 1.237v8.086A1.75 1.75 0 0112.25 15h-8.5A1.75 1.75 0 012 13.25V1.75z"/>
              </svg>
              My Documents
            <% end %>
            <%= link_to activities_path(user: @user.id), class: "btn btn-outline btn-sm" do %>
              <svg class="octicon octicon-activity mr-2" width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                <path d="M8 16A8 8 0 108 0a8 8 0 000 16zM1.5 8a6.5 6.5 0 1113 0 6.5 6.5 0 01-13 0zm4.879-2.773l4.264-1.559a.25.25 0 010 .465l-4.264 1.559A.25.25 0 016 10.559V8.5a.5.5 0 01.879-.273z"/>
              </svg>
              My Activity
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
