<% content_for :title, "Admin - Scenario: #{@scenario.name}" %>

<div class="container-lg px-3 py-4">
  <!-- Header -->
  <div class="d-flex flex-items-center flex-justify-between mb-4">
    <div class="d-flex flex-items-center">
      <svg class="octicon octicon-file-code mr-3" width="24" height="24" viewBox="0 0 16 16" fill="currentColor">
        <path d="M4.72 3.22a.75.75 0 011.06 1.06L2.06 8l3.72 3.72a.75.75 0 11-1.06 1.06L.47 8.53a.75.75 0 010-1.06l4.25-4.25zm6.56 0a.75.75 0 10-1.06 1.06L13.94 8l-3.72 3.72a.75.75 0 101.06 1.06l4.25-4.25a.75.75 0 000-1.06l-4.25-4.25z"/>
      </svg>
      <div>
        <h1 class="h2 mb-1"><%= @scenario.name %></h1>
        <p class="text-gray mb-0">Manage scenario information and view associated documents</p>
      </div>
    </div>
    <div class="d-flex flex-items-center gap-2">
      <%= link_to edit_admin_scenario_path(@scenario), class: "btn btn-outline" do %>
        <svg class="octicon octicon-pencil mr-2" width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
          <path d="M11.013 1.427a1.75 1.75 0 012.474 0l1.086 1.086a1.75 1.75 0 010 2.474l-8.61 8.61c-.21.21-.47.364-.756.445l-3.251.93a.75.75 0 01-.927-.928l.929-3.25a1.75 1.75 0 01.445-.758l8.61-8.61zm1.414 1.06a.25.25 0 00-.354 0L10.811 3.75l1.439 1.44 1.263-1.263a.25.25 0 000-.354l-1.086-1.086zM11.189 6.25L9.75 4.81l-6.286 6.287a.25.25 0 00-.064.108l-.558 1.953 1.953-.558a.249.249 0 00.108-.064l6.286-6.286z"/>
        </svg>
        Edit Scenario
      <% end %>
      <%= link_to admin_scenario_path(@scenario), method: :delete, data: { confirm: "Are you sure you want to delete this scenario? This action cannot be undone." }, class: "btn btn-danger" do %>
        <svg class="octicon octicon-trash mr-2" width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
          <path d="M10.5 4.5a.75.75 0 00-1.5 0v1h-3v-1a.75.75 0 00-1.5 0v1h-2.25a.75.75 0 000 1.5H2v8.25c0 .966.784 1.75 1.75 1.75h8.5A1.75 1.75 0 0014 15.25V7h.75a.75.75 0 000-1.5H12.5v-1zM11 7v8.25a.25.25 0 01-.25.25h-8.5A.25.25 0 013 15.25V7h8z"/>
        </svg>
        Delete Scenario
      <% end %>
    </div>
  </div>

  <div class="Layout Layout--sidebarPosition-start Layout--sidebar-narrow">
    <div class="Layout-sidebar">
      <!-- Scenario Information -->
      <div class="Box mb-3">
        <div class="Box-header">
          <h3 class="Box-title">Scenario Information</h3>
        </div>
        <div class="Box-body">
          <dl class="form-group">
            <dt>Name</dt>
            <dd><%= @scenario.name %></dd>
          </dl>
          <dl class="form-group">
            <dt>Description</dt>
            <dd><%= @scenario.description %></dd>
          </dl>
          <dl class="form-group">
            <dt>Created</dt>
            <dd><%= @scenario.created_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
          </dl>
          <dl class="form-group">
            <dt>Last Updated</dt>
            <dd><%= @scenario.updated_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
          </dl>
        </div>
      </div>

      <!-- Statistics -->
      <div class="Box">
        <div class="Box-header">
          <h3 class="Box-title">Statistics</h3>
        </div>
        <div class="Box-body">
          <div class="d-flex flex-items-center mb-2">
            <svg class="octicon octicon-file mr-2" width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
              <path d="M3.75 1.5a.25.25 0 00-.25.25v11.5c0 .138.112.25.25.25h8.5a.25.25 0 00.25-.25V6H9.75A1.75 1.75 0 018 4.25V1.5H3.75zm5.75.56v2.19c0 .138.112.25.25.25h2.19L9.5 2.06zM2 1.75C2 .784 2.784 0 3.75 0h5.086c.464 0 .909.184 1.237.513l3.414 3.414c.329.328.513.773.513 1.237v8.086A1.75 1.75 0 0112.25 15h-8.5A1.75 1.75 0 012 13.25V1.75z"/>
            </svg>
            <span class="text-gray"><%= pluralize(@scenario.documents.count, 'document') %></span>
          </div>
          <div class="d-flex flex-items-center">
            <svg class="octicon octicon-people mr-2" width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
              <path d="M2 5.5a3.5 3.5 0 101.665 2.95L8.585 10l-.665.665 1.948 1.948a3.5 3.5 0 101.414-1.414l1.948-1.948L10 8.585l-1.55 1.665a3.5 3.5 0 10-2.95-1.665H2zM5.5 12a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zm4.5-1.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0z"/>
            </svg>
            <span class="text-gray"><%= pluralize(@scenario.documents.joins(:author).distinct.count, 'unique author') %></span>
          </div>
        </div>
      </div>
    </div>

    <div class="Layout-main">
      <!-- Documents Section -->
      <div class="Box">
        <div class="Box-header d-flex flex-items-center flex-justify-between">
          <h3 class="Box-title">
            Documents with this Scenario
            <% if @documents.respond_to?(:total_count) %>
              <span class="Counter"><%= @documents.total_count %></span>
            <% end %>
          </h3>
          <%= link_to admin_scenarios_path, class: "btn btn-sm btn-outline" do %>
            <svg class="octicon octicon-arrow-left mr-2" width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
              <path d="M7.78 12.53a.75.75 0 01-1.06 0L2.47 8.28a.75.75 0 010-1.06l4.25-4.25a.75.75 0 011.06 1.06L4.81 7h7.44a.75.75 0 010 1.5H4.81l2.97 2.97a.75.75 0 010 1.06z"/>
            </svg>
            Back to Scenarios
          <% end %>
        </div>
        <div class="Box-body">
          <% if @documents&.any? %>
            <div class="list-style-none">
              <% @documents.each do |document| %>
                <div class="Box-row d-flex flex-items-center">
                  <div class="flex-auto">
                    <div class="d-flex flex-items-center">
                      <svg class="octicon octicon-file mr-2" width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                        <path d="M3.75 1.5a.25.25 0 00-.25.25v11.5c0 .138.112.25.25.25h8.5a.25.25 0 00.25-.25V6H9.75A1.75 1.75 0 018 4.25V1.5H3.75zm5.75.56v2.19c0 .138.112.25.25.25h2.19L9.5 2.06zM2 1.75C2 .784 2.784 0 3.75 0h5.086c.464 0 .909.184 1.237.513l3.414 3.414c.329.328.513.773.513 1.237v8.086A1.75 1.75 0 0112.25 15h-8.5A1.75 1.75 0 012 13.25V1.75z"/>
                      </svg>
                      <%= link_to document.title, document_path(document), class: "Link--primary" %>
                    </div>
                    <p class="text-gray text-small mb-0">
                      By <%= document.author&.name %> • <%= document.folder&.name %> • <%= document.status&.name %> • <%= time_ago_in_words(document.created_at) %> ago
                    </p>
                  </div>
                  <div class="d-flex flex-items-center gap-2">
                    <% document.tags.each do |tag| %>
                      <span class="Label Label--<%= tag.color || 'secondary' %>"><%= tag.name %></span>
                    <% end %>
                    <%= link_to document_path(document), class: "btn btn-sm btn-outline" do %>
                      View
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>

            <!-- Pagination -->
            <% if @documents.respond_to?(:current_page) %>
              <div class="d-flex flex-justify-center mt-4">
                <nav class="paginate-container" aria-label="Pagination">
                  <div class="pagination">
                    <% if @documents.prev_page %>
                      <%= link_to "Previous", url_for(page: @documents.prev_page), class: "previous_page", rel: "prev" %>
                    <% else %>
                      <span class="previous_page disabled">Previous</span>
                    <% end %>
                    
                    <% @documents.total_pages.times do |page_num| %>
                      <% page_num += 1 %>
                      <% if page_num == @documents.current_page %>
                        <em class="current"><%= page_num %></em>
                      <% elsif page_num == 1 || page_num == @documents.total_pages || (page_num >= @documents.current_page - 2 && page_num <= @documents.current_page + 2) %>
                        <%= link_to page_num, url_for(page: page_num) %>
                      <% elsif page_num == @documents.current_page - 3 || page_num == @documents.current_page + 3 %>
                        <span class="gap">…</span>
                      <% end %>
                    <% end %>
                    
                    <% if @documents.next_page %>
                      <%= link_to "Next", url_for(page: @documents.next_page), class: "next_page", rel: "next" %>
                    <% else %>
                      <span class="next_page disabled">Next</span>
                    <% end %>
                  </div>
                </nav>
              </div>
            <% end %>
          <% else %>
            <div class="blankslate">
              <svg class="octicon octicon-file blankslate-icon" width="24" height="24" viewBox="0 0 16 16" fill="currentColor">
                <path d="M3.75 1.5a.25.25 0 00-.25.25v11.5c0 .138.112.25.25.25h8.5a.25.25 0 00.25-.25V6H9.75A1.75 1.75 0 018 4.25V1.5H3.75zm5.75.56v2.19c0 .138.112.25.25.25h2.19L9.5 2.06zM2 1.75C2 .784 2.784 0 3.75 0h5.086c.464 0 .909.184 1.237.513l3.414 3.414c.329.328.513.773.513 1.237v8.086A1.75 1.75 0 0112.25 15h-8.5A1.75 1.75 0 012 13.25V1.75z"/>
              </svg>
              <h3 class="blankslate-heading">No documents found</h3>
              <p class="blankslate-text">This scenario type is not associated with any documents yet.</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
