<% content_for :title, "Manage Tags" %>

<%= render(Layout::PageContent.new(padding: :none)) do %>
  <!-- Page Header -->
  <%= render(Layout::PageHeader.new(
    title: "Manage Tags",
    description: "Manage and organize document tags across the system",
    icon: "tag",
    action: {
      text: "New Tag",
      url: new_admin_tag_path
    }
  )) %>

  <!-- Search and Filters -->
  <%= render(Layout::CardList::SearchAndFiltersComponent.new(
    search_object: @q,
    url: admin_tags_path,
    title: "Search & Filters",
    fields: [
      {
        name: :name_cont,
        label: "Tag Name",
        placeholder: "Search by tag name..."
      }
    ]
  )) %>

  <!-- Tags Grid -->
  <%= render(Layout::CardList.new(
    cards: @tags,
    layout: :grid,
    title: "Tags",
    empty_state_title: "No tags found",
    empty_state_description: "Get started by creating your first tag.",
    empty_state_action: {
      text: "Create Tag",
      url: new_admin_tag_path
    }
  )) do %>
    <% @tags.each do |tag| %>
      <%= render(Tag::CardComponent.new(tag: tag, admin_context: true)) %>
    <% end %>
  <% end %>
<% end %>
