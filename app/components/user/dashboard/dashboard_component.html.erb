<%= render(Layout::PageContent.new(padding: :none)) do %>
  <!-- Page Header -->
  <%= render(Layout::Dashboard::HeaderComponent.new(**header_data)) %>

  <!-- Statistics Cards -->
  <%= render(Layout::Dashboard::StatisticsGridComponent.new(
    title: "Overview",
    statistics: statistics_data
  )) %>

  <!-- Content Sections -->
  <div class="mt-5">
    <div class="d-lg-flex" style="gap: 24px;">
      <!-- Recent Documents -->
      <div class="flex-1 mb-4 mb-lg-0">
        <%= render(Layout::Dashboard::RecentDocumentsComponent.new(
          documents: recent_documents,
          title: "Recent Documents",
          view_all_path: documents_path,
          view_all_text: "View All Documents",
          new_document_path: new_document_path
        )) %>
      </div>
      
      <!-- Recent Activity -->
      <div class="flex-1">
        <%= render(Layout::Dashboard::RecentActivityComponent.new(
          activities: recent_activity,
          title: "Recent Activity",
          view_all_path: user_activities_path(current_user),
          view_all_text: "View All Activity"
        )) %>
      </div>
    </div>
  </div>
<% end %>
