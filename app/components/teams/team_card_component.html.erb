<div class="<%= card_classes %>">
  <div class="Box-body">
    <div class="d-flex flex-items-start mb-3">
      <div class="flex-auto">
        <h5 class="Box-title mb-1">
          <%= link_to team.name, organization_team_path(team.organization, team), class: "Link--primary" %>
        </h5>
        <p class="color-fg-muted mb-0">
          <i class="octicon octicon-organization mr-1"></i> <%= organization_name %>
        </p>
      </div>
      <% if can_manage_team? %>
        <div class="dropdown">
          <button class="btn btn-sm btn-outline dropdown-toggle" type="button" data-bs-toggle="dropdown">
            <i class="octicon octicon-kebab-horizontal"></i>
          </button>
          <ul class="dropdown-menu">
            <li><%= link_to "Edit", edit_organization_team_path(team.organization, team), class: "dropdown-item" %></li>
            <li><%= link_to "Manage Members", organization_team_path(team.organization, team), class: "dropdown-item" %></li>
          </ul>
        </div>
      <% end %>
    </div>

    <div class="d-flex flex-items-center">
      <div class="flex-auto border-right pr-3">
        <h6 class="mb-1"><%= member_count %></h6>
        <span class="color-fg-muted f6">Members</span>
      </div>
      <div class="flex-auto pl-3">
        <h6 class="mb-1"><%= document_count %></h6>
        <span class="color-fg-muted f6">Documents</span>
      </div>
    </div>

    <% if team.leader %>
      <div class="mt-3 pt-3 border-top">
        <span class="color-fg-muted f6">
          <i class="octicon octicon-person mr-1"></i> Leader: <%= team.leader.name %>
        </span>
      </div>
    <% end %>
  </div>
</div>
