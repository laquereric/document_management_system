<div class="<%= card_classes %>">
  <div class="<%= title_classes %>">
    <div class="d-flex flex-items-start flex-justify-between">
      <div class="flex-auto mr-2">
        <h3 class="f4 text-semibold lh-condensed mb-1">
          <%= link_to document.title, document_path(document), class: "Link--primary text-decoration-none" %>
        </h3>
      </div>
      <% if has_file? %>
        <span class="Label Label--accent Label--large d-flex flex-items-center">
          <svg class="octicon octicon-file mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="12" height="12" aria-hidden="true">
            <path d="M2 1.75C2 .784 2.784 0 3.75 0h6.586c.464 0 .909.184 1.237.513l2.914 2.914c.329.328.513.773.513 1.237v9.586A1.75 1.75 0 0 1 13.25 16h-9.5A1.75 1.75 0 0 1 2 14.25Zm1.75-.25a.25.25 0 0 0-.25.25v12.5c0 .138.112.25.25.25h9.5a.25.25 0 0 0 .25-.25V6H9.75A1.75 1.75 0 0 1 8 4.25V1.5Zm6.75.062V4.25c0 .138.112.25.25.25h2.688l-.011-.013-2.914-2.914-.013-.011Z"></path>
          </svg>
          <span class="f6 text-semibold"><%= document.file.filename.extension.upcase %></span>
        </span>
      <% end %>
    </div>
  </div>

  <div class="<%= content_classes %>">
    <% if truncated_content.present? %>
      <p class="f5 color-fg-muted mb-3 lh-default">
        <%= truncated_content %>
      </p>
    <% end %>

    <div class="d-flex flex-items-center flex-wrap mb-3" style="gap: 6px;">
      <%= render(Ui::StatusBadgeComponent.new(status: document.status)) if document.status %>
      <% document.tags.each do |tag| %>
        <%= render(Tags::TagLabelComponent.new(tag: tag)) %>
      <% end %>
    </div>

    <div class="d-flex flex-items-center flex-wrap f6 color-fg-muted" style="gap: 16px;">
      <span class="d-flex flex-items-center">
        <svg class="octicon octicon-person mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="12" height="12" aria-hidden="true">
          <path d="M10.561 8.073a6.005 6.005 0 0 1 3.432 5.142.75.75 0 1 1-1.498.07 4.5 4.5 0 0 0-8.99 0 .75.75 0 0 1-1.498-.07 6.004 6.004 0 0 1 3.431-5.142 3.999 3.999 0 1 1 5.123 0ZM10.5 5a2.5 2.5 0 1 0-5 0 2.5 2.5 0 0 0 5 0Z"></path>
        </svg>
        <%= author_name %>
      </span>
      <span class="d-flex flex-items-center">
        <svg class="octicon octicon-file-directory mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="12" height="12" aria-hidden="true">
          <path d="M1.75 1A1.75 1.75 0 0 0 0 2.75v10.5C0 14.216.784 15 1.75 15h12.5A1.75 1.75 0 0 0 16 13.25v-8.5A1.75 1.75 0 0 0 14.25 3H7.5a.25.25 0 0 1-.2-.1l-.9-1.2C6.07 1.26 5.55 1 5 1H1.75Z"></path>
        </svg>
        <%= folder_name %>
      </span>
      <span class="d-flex flex-items-center">
        <svg class="octicon octicon-clock mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="12" height="12" aria-hidden="true">
          <path d="M8 0a8 8 0 1 1 0 16A8 8 0 0 1 8 0ZM1.5 8a6.5 6.5 0 1 0 13 0 6.5 6.5 0 0 0-13 0Zm7-3.25v2.992l2.028.812a.75.75 0 0 1-.557 1.392l-2.5-1A.751.751 0 0 1 7 8.25v-3.5a.75.75 0 0 1 1.5 0Z"></path>
        </svg>
        <%= formatted_date %>
      </span>
    </div>
  </div>

  <% if show_actions %>
    <div class="<%= footer_classes %>">
      <div class="d-flex flex-items-center flex-justify-between flex-wrap" style="gap: 8px;">
        <div class="d-flex flex-items-center" style="gap: 4px;">
          <%= link_to document_path(document), class: "btn btn-sm" do %>
            <svg class="octicon octicon-eye mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="12" height="12" aria-hidden="true">
              <path d="M8 2c1.981 0 3.671.992 4.933 2.078 1.27 1.091 2.187 2.345 2.637 3.023a1.62 1.62 0 0 1 0 1.798c-.45.678-1.367 1.932-2.637 3.023C11.671 13.008 9.981 14 8 14c-1.981 0-3.671-.992-4.933-2.078C1.797 10.889.88 9.635.43 8.957a1.62 1.62 0 0 1 0-1.798c.45-.678 1.367-1.932 2.637-3.023C4.33 2.992 6.019 2 8 2ZM1.679 7.932a.12.12 0 0 0 0 .136c.411.622 1.241 1.75 2.366 2.717C5.176 11.758 6.527 12.5 8 12.5c1.473 0 2.825-.742 3.955-1.715 1.124-.967 1.954-2.096 2.366-2.717a.12.12 0 0 0 0-.136C13.91 7.310 13.08 6.182 11.955 5.215 10.825 4.242 9.473 3.5 8 3.5c-1.473 0-2.825.742-3.955 1.715C2.92 6.182 2.09 7.31 1.679 7.932ZM8 10a2 2 0 1 1-.001-3.999A2 2 0 0 1 8 10Z"></path>
            </svg>
            View
          <% end %>
          <%= link_to edit_document_path(document), class: "btn btn-sm" do %>
            <svg class="octicon octicon-pencil mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="12" height="12" aria-hidden="true">
              <path d="M11.013 1.427a1.75 1.75 0 0 1 2.474 0l1.086 1.086a1.75 1.75 0 0 1 0 2.474l-8.61 8.61c-.21.21-.47.364-.756.445l-3.251.93a.75.75 0 0 1-.927-.928l.929-3.25c.08-.283.235-.547.445-.758l8.61-8.61Zm.176 4.823L9.75 4.81l-6.286 6.287a.253.253 0 0 0-.064.108l-.558 1.953 1.953-.558a.253.253 0 0 0 .108-.064Zm1.238-1.238L13.19 6.25l1.439-1.44a.25.25 0 0 0 0-.354l-1.086-1.086a.25.25 0 0 0-.354 0Z"></path>
            </svg>
            Edit
          <% end %>
        </div>
        <div class="d-flex flex-items-center" style="gap: 4px;">
          <% if document.url.present? %>
            <%= link_to document.url, target: "_blank", class: "btn btn-sm", title: "Open external link" do %>
              <svg class="octicon octicon-link-external mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="12" height="12" aria-hidden="true">
                <path d="M3.75 2A1.75 1.75 0 0 0 2 3.75v8.5A1.75 1.75 0 0 0 3.75 14h8.5A1.75 1.75 0 0 0 14 12.25v-3.5a.75.75 0 0 0-1.5 0v3.5a.25.25 0 0 1-.25.25h-8.5a.25.25 0 0 1-.25-.25v-8.5a.25.25 0 0 1 .25-.25h3.5a.75.75 0 0 0 0-1.5h-3.5Zm10.5-1h-3.5a.75.75 0 0 0 0 1.5h2.69l-5.97 5.97a.75.75 0 1 0 1.06 1.06l5.97-5.97v2.69a.75.75 0 0 0 1.5 0v-3.5a.75.75 0 0 0-.75-.75Z"></path>
              </svg>
              External
            <% end %>
          <% end %>
          <% if has_file? %>
            <%= link_to rails_blob_path(document.file, disposition: "attachment"), class: "btn btn-sm", title: "Download attachment" do %>
              <svg class="octicon octicon-download mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="12" height="12" aria-hidden="true">
                <path d="M2.75 14A1.75 1.75 0 0 1 1 12.25v-2.5a.75.75 0 0 1 1.5 0v2.5c0 .138.112.25.25.25h10.5a.25.25 0 0 0 .25-.25v-2.5a.75.75 0 0 1 1.5 0v2.5A1.75 1.75 0 0 1 13.25 14H2.75Zm7-10.25v7.5a.75.75 0 0 1-1.5 0v-7.5L5.22 9.22a.75.75 0 1 1-1.06-1.06l3.5-3.5a.75.75 0 0 1 1.06 0l3.5 3.5a.75.75 0 0 1-1.06 1.06L9.75 3.75Z"></path>
              </svg>
              Download
            <% end %>
          <% end %>
          <%= button_to document_path(document),
              method: :delete,
              class: "btn btn-sm btn-danger",
              form: { style: "display: inline;" },
              data: {
                confirm: "Are you sure you want to delete '#{document.title}'?",
                turbo_method: :delete
              },
              title: "Delete document" do %>
            <svg class="octicon octicon-trash mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="12" height="12" aria-hidden="true">
              <path d="M11 1.75V3h2.25a.75.75 0 0 1 0 1.5H2.75a.75.75 0 0 1 0-1.5H5V1.75C5 .784 5.784 0 6.75 0h2.5C10.216 0 11 .784 11 1.75ZM4.496 6.675l.66 6.6a.25.25 0 0 0 .249.225h5.19a.25.25 0 0 0 .249-.225l.66-6.6a.75.75 0 0 1 1.492.149l-.66 6.6A1.748 1.748 0 0 1 10.595 15h-5.19a1.748 1.748 0 0 1-1.741-1.575l-.66-6.6a.75.75 0 1 1 1.492-.15ZM6.5 1.75V3h3V1.75a.25.25 0 0 0-.25-.25h-2.5a.25.25 0 0 0-.25.25Z"></path>
            </svg>
            Delete
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
