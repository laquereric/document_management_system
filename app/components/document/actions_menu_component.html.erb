<%= render(Primer::Alpha::ActionMenu.new(
  menu_id: "document-actions-#{document.id}",
  position: :relative
)) do |menu| %>
  <% menu.with_show_button do %>
    <%= render(Primer::ButtonComponent.new(
      scheme: :invisible,
      size: :small,
      "aria-label": "Document actions"
    )) do %>
      <%= render(Primer::OcticonComponent.new(icon: :kebab_horizontal)) %>
    <% end %>
  <% end %>

  <% menu_items.each do |item| %>
    <% menu.with_item(
      label: item[:label],
      href: item[:href],
      target: item[:target],
      data: item[:data],
      classes: item[:classes]
    ) do %>
      <%= render(Primer::OcticonComponent.new(icon: item[:icon], mr: 2)) %>
      <%= item[:label] %>
    <% end %>
  <% end %>
<% end %>
