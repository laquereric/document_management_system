<%= render(Local::BaseComponent.new(**@system_arguments)) do %>
  <!-- Header Container with Primer-style layout -->
  <div class="Header-inner d-flex flex-items-center width-full">
    <!-- Left Section: Brand and Context -->
    <div class="Header-section d-flex flex-items-center flex-shrink-0">
      <%= brand_content %>
      <%= context_section %>
    </div>

    <!-- Center Section: Search (takes remaining space) -->
    <div class="Header-section d-flex flex-items-center flex-auto mx-3">
      <%= search_section %>
    </div>

    <!-- Right Section: Actions -->
    <div class="Header-section d-flex flex-items-center flex-shrink-0">
      <%= actions_section %>
    </div>
  </div>
<% end %>
