<%= form_with(
  url: search_index_path,
  method: :get,
  local: true,
  class: search_form_classes,
  data: { turbo_frame: "search-results" }
) do |form| %>
  
  <div class="input-group">
    <%= form.text_field :q,
      value: value,
      placeholder: placeholder,
      class: "form-control #{input_size_class}",
      data: {
        action: "input->search:query",
        search_target: "input"
      }
    %>
    
    <button type="submit" class="btn btn-sm btn-outline input-group-button">
      <i class="octicon octicon-search"></i>
    </button>
  </div>

  <!-- Quick Results Dropdown (hidden by default) -->
  <div class="position-absolute top-100 left-0 right-0 mt-1 d-none" 
       data-search-target="results">
    <div class="Box Box--overlay">
      <div class="Box-header">
        <h3 class="Box-title">Quick Results</h3>
      </div>
      <div class="Box-body" data-search-target="resultsContent">
        <!-- Results will be loaded here -->
      </div>
      <div class="Box-footer">
        <%= link_to "View all results", search_index_path, class: "btn btn-sm" %>
      </div>
    </div>
  </div>
<% end %>
