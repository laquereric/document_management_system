<div class="<%= dashboard_classes %>">
  <!-- Page Header -->
  <%= render(Layout::Dashboard::HeaderComponent.new(**header_data)) %>

  <!-- Statistics Cards -->
  <div class="mt-4">
    <%= render(Layout::Dashboard::StatisticsGridComponent.new(
      statistics: statistics_data
    )) %>
  </div>

  <!-- Content Sections -->
  <div class="mt-5">
    <div class="d-lg-flex" style="gap: 24px;">
      <!-- Recent Documents -->
      <div class="flex-1 mb-4 mb-lg-0">
        <%= render(Layout::Dashboard::DataListComponent.new(
          title: "Recent Documents",
          data: recent_documents,
          view_all_path: documents_path,
          view_all_text: "View All",
          empty_message: "No recent documents"
        )) %>
      </div>
      
      <!-- Recent Activity -->
      <div class="flex-1">
        <%= render(Layout::Dashboard::DataListComponent.new(
          title: "Recent Activity",
          data: recent_activity,
          view_all_path: models_activities_path,
          view_all_text: "View All",
          empty_message: "No recent activity"
        )) %>
      </div>
    </div>
  </div>
</div>
