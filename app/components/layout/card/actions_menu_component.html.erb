<!-- Generic actions menu using Primer components -->
<%= render Primer::Alpha::ActionMenu.new do |menu| %>
  <% menu.with_show_button do %>
    <%= render Primer::Beta::Button.new(
      scheme: :default,
      size: :small,
      "aria-label": "#{resource_type.humanize} actions"
    ) do %>
      <%= render Primer::Beta::Octicon.new(icon: :"kebab-horizontal") %>
    <% end %>
  <% end %>
  
  <% menu_items.each do |item| %>
    <% if item[:href] == "#" %>
      <%= menu.with_item(
        href: item[:href],
        data: item[:data] || {},
        target: item[:target],
        classes: item[:classes]
      ) do %>
        <%= render Primer::Beta::Octicon.new(icon: item[:icon], mr: 2) %>
        <%= item[:label] %>
      <% end %>
    <% else %>
      <%= menu.with_item(
        href: item[:href],
        data: item[:data] || {},
        target: item[:target],
        classes: item[:classes]
      ) do %>
        <%= render Primer::Beta::Octicon.new(icon: item[:icon], mr: 2) %>
        <%= item[:label] %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
