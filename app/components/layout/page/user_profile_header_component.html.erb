<div class="<%= header_classes %>">
  <div>
    <h1 class="h2 mb-1"><%= user.name %></h1>
    <p class="color-fg-muted">User profile and account details</p>
  </div>
  <div class="d-flex gap-2">
    <% if can_edit_user? %>
      <%= link_to models_edit_user_path(user), class: "btn btn-outline" do %>
        <%= render(Primer::Beta::Octicon.new(icon: "pencil", size: :small)) %>
        <span class="ml-2">Edit User</span>
      <% end %>
    <% end %>
    <% if can_delete_user? %>
      <%= link_to models_user_path(user),
          method: :delete,
          data: { confirm: "Are you sure you want to delete this user? This action cannot be undone." },
          class: "btn btn-danger" do %>
        <%= render(Primer::Beta::Octicon.new(icon: "trash", size: :small)) %>
        <span class="ml-2">Delete User</span>
      <% end %>
    <% end %>
  </div>
</div>
