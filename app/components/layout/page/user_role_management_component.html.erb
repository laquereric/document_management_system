<% if should_show? %>
  <%= render(Primer::Beta::BorderBox.new) do %>
    <%= render(Primer::Beta::BorderBox::Header.new) do %>
      <h3 class="Box-title">Role Management</h3>
    <% end %>
    <%= render(Local::Beta::BorderBox::Body.new) do %>
      <div class="d-flex flex-items-center justify-content-between">
        <div>
          <strong>Current Role:</strong> 
          <%= render(Primer::Beta::Label.new(scheme: role_label_scheme)) do %>
            <%= user.admin? ? 'Admin' : 'User' %>
          <% end %>
        </div>
        <%= link_to models_toggle_role_user_path(user),
            method: :patch,
            class: "btn btn-sm btn-outline",
            data: { confirm: "Are you sure you want to change this user's role?" } do %>
          <%= render(Primer::Beta::Octicon.new(icon: "arrow-switch", size: :small)) %>
          <span class="ml-2">Toggle Role</span>
        <% end %>
      </div>
    <% end %>
  <% end %>
<% end %>
