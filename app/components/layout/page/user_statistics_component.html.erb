<%= render(Primer::Beta::BorderBox.new) do %>
  <%= render(Primer::Beta::BorderBox::Header.new) do %>
    <h3 class="Box-title">Statistics</h3>
  <% end %>
  <%= render(Primer::Beta::BorderBox::Body.new) do %>
    <div class="d-flex flex-wrap" style="gap: 16px;">
      <% statistics_data.each do |stat| %>
        <div class="flex-1" style="min-width: 120px;">
          <div class="d-flex flex-column align-items-center text-center">
            <div class="CircleBadge CircleBadge--large <%= stat[:bg_color] %> mb-2">
              <%= render(Primer::Beta::Octicon.new(icon: stat[:icon], size: :small)) %>
            </div>
            <div class="h3 mb-1"><%= stat[:value] %></div>
            <div class="color-fg-muted"><%= stat[:title] %></div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>
