<div class="<%= card_classes %>">
  <div class="<%= title_classes %>">
    <div class="d-flex flex-items-center justify-content-between">
      <div class="d-flex flex-items-center">
        <svg class="octicon octicon-file-directory mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="16" height="16">
          <path d="M1.75 1A1.75 1.75 0 0 0 0 2.75v10.5C0 14.216.784 15 1.75 15h12.5A1.75 1.75 0 0 0 16 13.25v-8.5A1.75 1.75 0 0 0 14.25 3H7.5a.25.25 0 0 1-.2-.1l-.9-1.2C6.07 1.26 5.55 1 5 1H1.75Z"></path>
        </svg>
        <%= link_to folder.name, folder_path(folder), class: "Link--primary text-bold" %>
      </div>
      <% if show_actions %>
        <div class="d-flex flex-items-center gap-1">
          <%= link_to folder_path(folder), class: "btn btn-sm btn-outline", title: "View folder" do %>
            <svg class="octicon octicon-eye" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="16" height="16">
              <path d="M8 2c1.981 0 3.671.992 4.933 2.078 1.27 1.091 2.187 2.345 2.637 3.023a1.62 1.62 0 0 1 0 1.798c-.45.678-1.367 1.932-2.637 3.023C11.671 13.008 9.981 14 8 14c-1.981 0-3.671-.992-4.933-2.078C1.797 10.889.88 9.635.43 8.957a1.62 1.62 0 0 1 0-1.798c.45-.678 1.367-1.932 2.637-3.023C4.33 2.992 6.019 2 8 2ZM8 1c-2.331 0-4.264 1.186-5.615 2.354C1.343 4.524.5 5.79.5 6.5c0 .71.843 1.976 1.885 3.146C3.736 10.814 5.669 12 8 12c2.331 0 4.264-1.186 5.615-2.354C14.657 7.476 15.5 6.21 15.5 6.5c0-.71-.843-1.976-1.885-3.146C12.264 1.186 10.331 0 8 0Z"></path>
              <path d="M8 4a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5ZM8 5.5a1 1 0 1 1 0 2 1 1 0 0 1 0-2Z"></path>
            </svg>
          <% end %>
          <%= link_to edit_folder_path(folder), class: "btn btn-sm btn-outline", title: "Edit folder" do %>
            <svg class="octicon octicon-pencil" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="16" height="16">
              <path d="M11.013 1.427a1.75 1.75 0 0 1 2.474 0l1.086 1.086a1.75 1.75 0 0 1 0 2.474l-.897.897a.75.75 0 0 1-.53.22H13.25a.75.75 0 0 1-.75-.75v-1.5a.75.75 0 0 0-.75-.75h-1.5a.75.75 0 0 0-.75.75v1.5a.75.75 0 0 1-.75.75H9.5a.75.75 0 0 1-.53-.22l-.897-.897a1.75 1.75 0 0 1 0-2.474l1.086-1.086ZM8.293 4.293a.25.25 0 0 0-.354 0l-3.5 3.5a.25.25 0 0 0-.073.177v.5a.25.25 0 0 0 .25.25h.5a.25.25 0 0 0 .177-.073l3.5-3.5a.25.25 0 0 0 0-.354Z"></path>
              <path d="M1.427 11.013a1.75 1.75 0 0 1 0-2.474l.897-.897a.75.75 0 0 1 .53-.22H4.75a.75.75 0 0 1 .75.75v1.5a.75.75 0 0 0 .75.75h1.5a.75.75 0 0 0 .75-.75v-1.5a.75.75 0 0 1 .75-.75h1.5a.75.75 0 0 1 .53.22l.897.897a1.75 1.75 0 0 1 0 2.474l-.897.897a.75.75 0 0 1-.53.22H9.5a.75.75 0 0 1-.75-.75v-1.5a.75.75 0 0 0-.75-.75h-1.5a.75.75 0 0 0-.75.75v1.5a.75.75 0 0 1-.75.75H4.75a.75.75 0 0 1-.53-.22l-.897-.897Z"></path>
            </svg>
          <% end %>
          <%= link_to folder_path(folder), 
              method: :delete, 
              data: { confirm: "Are you sure you want to delete '#{folder.name}'?" },
              class: "btn btn-sm btn-outline btn-danger", 
              title: "Delete folder" do %>
            <svg class="octicon octicon-trash" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="16" height="16">
              <path d="M10.5 4.5a.75.75 0 0 0-1.5 0V6H5.75a.75.75 0 0 0 0 1.5H9V11.5a.75.75 0 0 0 1.5 0V7.5h3.25a.75.75 0 0 0 0-1.5H10.5V4.5Z"></path>
              <path d="M3.25 2a.75.75 0 0 0-.75.75v10.5c0 .414.336.75.75.75h9.5a.75.75 0 0 0 .75-.75v-10.5a.75.75 0 0 0-.75-.75h-9.5ZM1.5 2.75A1.75 1.75 0 0 1 3.25 1h9.5c.966 0 1.75.784 1.75 1.75v10.5A1.75 1.75 0 0 1 12.75 15h-9.5A1.75 1.75 0 0 1 1.5 13.25V2.75Z"></path>
            </svg>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="<%= content_classes %>">
    <% if folder.description.present? %>
      <p class="color-fg-muted mb-2"><%= truncated_description %></p>
    <% end %>
    
    <div class="d-flex flex-items-center gap-3 text-small color-fg-muted">
      <div class="d-flex flex-items-center">
        <svg class="octicon octicon-people mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="16" height="16">
          <path d="M2 5.5a3.5 3.5 0 1 1 5.898 2.549 5.508 5.508 0 0 1 3.034 4.084.75.75 0 1 1-1.482.235 4.001 4.001 0 0 0-7.9 0 .75.75 0 0 1-1.482-.236A5.507 5.507 0 0 1 3.102 8.05 3.493 3.493 0 0 1 2 5.5ZM11 4a3.001 3.001 0 0 1 2.22 5.018 5.01 5.01 0 0 1 2.56 3.012.749.749 0 0 1-.885.954.752.752 0 0 1-.665-.57 3.51 3.51 0 0 0-2.522-2.372.75.75 0 0 1-.574-.73v-.352a.75.75 0 0 1 .416-.672A1.5 1.5 0 0 0 11 4Zm-5.5 1.5a2 2 0 1 0 0 4 2 2 0 0 0 0-4ZM9.5 6a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3Z"></path>
        </svg>
        <%= team_name %>
      </div>
      <div class="d-flex flex-items-center">
        <svg class="octicon octicon-organization mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="16" height="16">
          <path d="M1.5 14.25c0 .138.112.25.25.25H4v-1.25a.75.75 0 0 1 1.5 0v1.25h2.5v-1.25a.75.75 0 0 1 1.5 0v1.25h2.25a.25.25 0 0 0 .25-.25V1.75a.25.25 0 0 0-.25-.25h-8.5a.25.25 0 0 0-.25.25v12.5ZM1.75 16A1.75 1.75 0 0 1 0 14.25V1.75C0 .784.784 0 1.75 0h8.5C11.216 0 12 .784 12 1.75v12.5c0 .966-.784 1.75-1.75 1.75h-8.5ZM4 1.75A.25.25 0 0 1 4.25 1.5h3.5a.25.25 0 0 1 .25.25v3.5a.25.25 0 0 1-.25.25h-3.5A.25.25 0 0 1 4 5.25v-3.5ZM4.25 1a.75.75 0 0 0-.75.75v3.5c0 .414.336.75.75.75h3.5a.75.75 0 0 0 .75-.75v-3.5a.75.75 0 0 0-.75-.75h-3.5ZM6 10.75A.75.75 0 0 1 6.75 10h3.5a.75.75 0 0 1 0 1.5h-3.5A.75.75 0 0 1 6 10.75ZM6.75 9a.75.75 0 0 0 0 1.5h3.5a.75.75 0 0 0 0-1.5h-3.5ZM6 6.75A.75.75 0 0 1 6.75 6h3.5a.75.75 0 0 1 0 1.5h-3.5A.75.75 0 0 1 6 6.75ZM6.75 5a.75.75 0 0 0 0 1.5h3.5a.75.75 0 0 0 0-1.5h-3.5Z"></path>
        </svg>
        <%= organization_name %>
      </div>
    </div>
  </div>

  <div class="<%= footer_classes %>">
    <div class="d-flex flex-items-center justify-content-between text-small color-fg-muted">
      <div class="d-flex flex-items-center gap-3">
        <div class="d-flex flex-items-center">
          <svg class="octicon octicon-file-text mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="16" height="16">
            <path d="M3.75 1.5a.25.25 0 0 0-.25.25v11.5c0 .138.112.25.25.25h8.5a.25.25 0 0 0 .25-.25V6H9.75A1.75 1.75 0 0 1 8 4.25V1.5H3.75Zm5.75.56v2.19c0 .138.112.25.25.25h2.19L9.5 2.06ZM2 1.75C2 .784 2.784 0 3.75 0h5.086c.464 0 .909.184 1.237.513l3.414 3.414c.329.328.513.773.513 1.237v8.086A1.75 1.75 0 0 1 12.25 15h-8.5A1.75 1.75 0 0 1 2 13.25V1.75Z"></path>
          </svg>
          <%= pluralize(document_count, 'document') %>
        </div>
        <div class="d-flex flex-items-center">
          <svg class="octicon octicon-file-directory mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="16" height="16">
            <path d="M1.75 1A1.75 1.75 0 0 0 0 2.75v10.5C0 14.216.784 15 1.75 15h12.5A1.75 1.75 0 0 0 16 13.25v-8.5A1.75 1.75 0 0 0 14.25 3H7.5a.25.25 0 0 1-.2-.1l-.9-1.2C6.07 1.26 5.55 1 5 1H1.75Z"></path>
          </svg>
          <%= pluralize(subfolder_count, 'subfolder') %>
        </div>
      </div>
      <div class="d-flex flex-items-center">
        <svg class="octicon octicon-clock mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="16" height="16">
          <path d="M8 0a8 8 0 1 1 0 16A8 8 0 0 1 8 0ZM1.5 8a6.5 6.5 0 1 0 13 0 6.5 6.5 0 0 0-13 0Zm4.879-2.773 4.264 2.559a.25.25 0 0 1 0 .428l-4.264 2.559A.25.25 0 0 1 6 10.559V5.442a.25.25 0 0 1 .379-.215Z"></path>
        </svg>
        <%= formatted_date %>
      </div>
    </div>
  </div>
</div>
