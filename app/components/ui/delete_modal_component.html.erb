<div class="<%= modal_classes %>" id="<%= modal_id %>" tabindex="-1" role="dialog" aria-labelledby="<%= modal_id %>-title" aria-hidden="true">
  <div class="modal-dialog modal-sm" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="<%= modal_id %>-title">
          <svg class="octicon octicon-alert mr-2 color-fg-attention" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="16" height="16">
            <path d="M6.457 1.047c.659-1.234 2.427-1.234 3.086 0l6.082 11.378A1.75 1.75 0 0 1 14.082 15H1.918a1.75 1.75 0 0 1-1.543-2.575Zm2.763 6.703a.25.25 0 0 0-.44 0L1.698 13.132a.25.25 0 0 0 .22.368h12.164a.25.25 0 0 0 .22-.368Zm.53 3.996v2.5a.75.75 0 0 1-1.5 0v-2.5a.75.75 0 0 1 1.5 0ZM9 11a1 1 0 1 1-2 0 1 1 0 0 1 2 0Z"></path>
          </svg>
          <%= title %>
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      
      <div class="modal-body">
        <p class="mb-0">
          <%= display_message.html_safe %>
        </p>
        <p class="text-small color-fg-muted mt-2 mb-0">
          This action cannot be undone.
        </p>
      </div>
      
      <div class="modal-footer">
        <% if cancel_url %>
          <%= link_to "Cancel", cancel_url, class: cancel_button_classes, data: { "bs-dismiss": "modal" } %>
        <% else %>
          <button type="button" class="<%= cancel_button_classes %>" data-bs-dismiss="modal">Cancel</button>
        <% end %>
        
        <% if delete_url %>
          <%= link_to "Delete", delete_url, 
              method: :delete, 
              class: danger_button_classes,
              data: { 
                confirm: "Are you sure?",
                "bs-dismiss": "modal"
              } %>
        <% end %>
      </div>
    </div>
  </div>
</div>
