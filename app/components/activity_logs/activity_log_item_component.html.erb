<div class="<%= item_classes %>">
  <div class="me-3">
    <i class="<%= action_icon %>" style="font-size: 0.5rem;"></i>
  </div>
  <div class="flex-grow-1">
    <p class="mb-1">
      <strong><%= activity_log.user.name %></strong>
      <%= action_description %>
      <% if activity_log.document %>
        <strong><%= link_to activity_log.document.title, activity_log.document, class: "text-decoration-none" %></strong>
      <% end %>
    </p>
    <small class="text-muted">
      <%= time_ago_in_words(activity_log.created_at) %> ago
    </small>
    <% if activity_log.notes.present? && !activity_log.notes.start_with?('Added tag:', 'Removed tag:') %>
      <br>
      <small class="text-muted"><%= activity_log.notes %></small>
    <% end %>
  </div>
</div>
