<header class="<%= header_classes %>">
  <!-- Brand/Logo Section -->
  <div class="<%= brand_classes %>">
    <%= link_to root_path, class: "Header-link d-flex flex-items-center" do %>
      <i class="octicon octicon-file-directory mr-2"></i>
      <span class="f4 text-bold">DocuFlow</span>
      <% if title %>
        <span class="color-fg-muted ml-2">/ <%= title %></span>
      <% end %>
    <% end %>
  </div>

  <!-- Search Section -->
  <div class="Header-item mx-3">
    <%= render(Search::QuickSearchComponent.new(placeholder: "Search documents...")) %>
  </div>

  <!-- Navigation Actions -->
  <nav class="<%= nav_classes %>">
    <!-- Notifications -->
    <div class="Header-item">
      <button class="btn btn-sm btn-outline" aria-label="Notifications">
        <i class="octicon octicon-bell"></i>
      </button>
    </div>

    <!-- User Menu -->
    <div class="Header-item ml-2">
      <% if current_user %>
        <%= render(Ui::UserMenuComponent.new(user: current_user)) %>
      <% else %>
        <%= link_to "Sign In", new_user_session_path, class: "btn btn-sm btn-primary" %>
      <% end %>
    </div>
  </nav>
</header>
