<header class="<%= header_classes %>">
  <!-- Brand/Logo Section -->
  <div class="<%= brand_classes %>">
    <%= link_to root_path, class: "Header-link d-flex flex-items-center" do %>
      <svg class="octicon octicon-file-directory mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="16" height="16">
        <path d="M1.75 1A1.75 1.75 0 0 0 0 2.75v10.5C0 14.216.784 15 1.75 15h12.5A1.75 1.75 0 0 0 16 13.25v-8.5A1.75 1.75 0 0 0 14.25 3H7.5a.25.25 0 0 1-.2-.1l-.9-1.2C6.07 1.26 5.55 1 5 1H1.75Z"></path>
      </svg>
      <span class="f4 text-bold">DocuFlow</span>
    <% end %>
  </div>

  <!-- Context Region -->
  <% if title %>
    <div class="Header-item">
      <span class="color-fg-muted f5">/ <%= title %></span>
    </div>
  <% end %>

  <!-- Search Section -->
  <div class="Header-item mx-3">
    <%= render(Search::QuickSearchComponent.new(placeholder: "Search documents...")) %>
  </div>

  <!-- Navigation Actions -->
  <nav class="<%= nav_classes %>">
    <!-- Notifications -->
    <div class="Header-item">
      <button class="btn btn-sm btn-outline" aria-label="Notifications">
        <i class="octicon octicon-bell"></i>
      </button>
    </div>

    <!-- User Menu -->
    <div class="Header-item ml-2">
      <% if current_user %>
        <%= render(Ui::UserMenuComponent.new(user: current_user)) %>
      <% else %>
        <%= link_to "Sign In", new_user_session_path, class: "btn btn-sm btn-primary" %>
      <% end %>
    </div>
  </nav>
</header>
