<div class="<%= card_classes %>">
  <div class="card-header">
    <h5 class="mb-0"><i class="bi bi-activity"></i> <%= title %></h5>
  </div>
  <div class="card-body">
    <% if has_activities? %>
      <% activities.each do |activity| %>
        <%= render(Activities::ActivityItemComponent.new(activity: activity)) %>
      <% end %>
      
      <% if show_pagination && activities.respond_to?(:current_page) %>
        <div class="d-flex justify-content-center mt-3">
          <%= paginate activities %>
        </div>
      <% end %>
    <% else %>
      <p class="text-muted text-center py-3">No activity found.</p>
    <% end %>
  </div>
</div>
