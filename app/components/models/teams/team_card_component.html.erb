<div class="<%= card_classes %>">
  <div class="Box-header d-flex flex-items-center flex-justify-between">
    <div class="d-flex flex-items-center">
      <div class="mr-3">
        <svg class="octicon octicon-people color-fg-muted" width="20" height="20" viewBox="0 0 16 16">
          <path d="M2 5.5a3.5 3.5 0 1 1 5.898 2.549 5.508 5.508 0 0 1 3.034 4.084.75.75 0 1 1-1.482.235 4.001 4.001 0 0 0-7.9 0 .75.75 0 0 1-1.482-.236A5.507 5.507 0 0 1 3.102 8.05 3.493 3.493 0 0 1 2 5.5ZM11 4a3.001 3.001 0 0 1 2.22 5.018 5.01 5.01 0 0 1 2.56 3.012.749.749 0 0 1-.885.954.752.752 0 0 1-.665-.57 3.51 3.51 0 0 0-2.522-2.372.75.75 0 0 1-.574-.73v-.352a.75.75 0 0 1 .416-.672A1.5 1.5 0 0 0 11 4Zm-5.5 1.5a2 2 0 1 0 0 4 2 2 0 0 0 0-4ZM9.5 6a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3Z"></path>
        </svg>
      </div>
      <div class="flex-1">
        <h4 class="f4 text-semibold mb-1">
          <% if admin_context? %>
            <%= link_to team.name, models_team_path(team), class: "Link--primary" %>
          <% else %>
            <%= link_to team.name, organization_team_path(team.organization, team), class: "Link--primary" %>
          <% end %>
        </h4>
        <span class="f6 color-fg-muted">
          <svg class="octicon octicon-organization mr-1" width="12" height="12" viewBox="0 0 16 16">
            <path d="M1.75 16A1.75 1.75 0 0 1 0 14.25V1.75C0 .784.784 0 1.75 0h8.5C11.216 0 12 .784 12 1.75v12.5c0 .085-.006.168-.018.25h2.268a.25.25 0 0 0 .25-.25V8.285a.25.25 0 0 0-.111-.208l-1.14-.815a.75.75 0 0 1-.375-.65V2.285a.25.25 0 0 0-.25-.25h-1.5a.25.25 0 0 0-.25.25v3.576c0 .055.019.11.055.155.036.044.085.075.14.095l.815.407a.75.75 0 0 1 .375.65v7.285a.25.25 0 0 0 .25.25h.5a.25.25 0 0 0 .25-.25v-5.5a.25.25 0 0 0-.25-.25H12V4.715a.25.25 0 0 0-.111-.208L10.75 3.692a.75.75 0 0 1-.375-.65V1.75a.25.25 0 0 0-.25-.25h-8.5a.25.25 0 0 0-.25.25v12.5c0 .138.112.25.25.25H.25A.25.25 0 0 0 .5 14.25v-3.5a.75.75 0 0 1 1.5 0v3.5c0 .138.112.25.25.25h1.268a.75.75 0 0 1 0 1.5H1.75Z"></path>
          </svg>
          <%= organization_name %>
        </span>
      </div>
    </div>
    
    <% if can_manage_team? %>
              <%= render(Layout::Card::ActionsMenuComponent.new(resource: team, resource_type: 'team')) %>
    <% end %>
  </div>

  <div class="Box-body">
    <div class="d-flex flex-column" style="gap: 12px;">
      <div class="d-flex flex-items-center flex-justify-between p-2 border rounded-2">
        <span class="f6 color-fg-muted">Members:</span>
        <span class="f6 text-semibold"><%= member_count %></span>
      </div>
      <div class="d-flex flex-items-center flex-justify-between p-2 border rounded-2">
        <span class="f6 color-fg-muted">Documents:</span>
        <span class="f6 text-semibold"><%= document_count %></span>
      </div>
      <% if team.leader %>
        <div class="d-flex flex-items-center flex-justify-between p-2 border rounded-2">
          <span class="f6 color-fg-muted">Leader:</span>
          <span class="f6 text-semibold"><%= team.leader.name %></span>
        </div>
      <% end %>
    </div>
  </div>
</div>
