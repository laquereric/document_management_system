<%= form_with model: document, url: form_url, method: form_method, class: form_classes, local: true do |form| %>
  <div class="Box p-4">
    <div class="FormControl mb-3">
      <%= form.label :title, class: "FormControl-label" %>
      <%= form.text_field :title, class: "FormControl-input FormControl-large" %>
    </div>

    <div class="FormControl mb-3">
      <%= form.label :content, class: "FormControl-label" %>
      <%= form.text_area :content, class: "FormControl-textarea", rows: 5 %>
    </div>

    <div class="FormControl mb-3">
      <%= form.label :url, class: "FormControl-label" %>
      <%= form.url_field :url, class: "FormControl-input" %>
    </div>

    <div class="FormControl mb-3">
      <%= form.label :status_id, class: "FormControl-label" %>
      <%= form.select :status_id, 
          options_from_collection_for_select(statuses, :id, :name, document.status_id),
          { prompt: "Select status" },
          { class: "FormControl-select" } %>
    </div>

    <div class="FormControl mb-3">
      <%= form.label :scenario_id, class: "FormControl-label" %>
      <%= form.select :scenario_id, 
          options_from_collection_for_select(scenarios, :id, :name, document.scenario_id),
          { prompt: "Select scenario" },
          { class: "FormControl-select" } %>
    </div>

    <div class="FormControl mb-3">
      <%= form.label :folder_id, class: "FormControl-label" %>
      <%= form.select :folder_id, 
          options_from_collection_for_select(folders, :id, :name, document.folder_id),
          { prompt: "Select folder" },
          { class: "FormControl-select" } %>
    </div>

    <div class="FormControl mb-3">
      <%= form.label :file, class: "FormControl-label" %>
      <%= form.file_field :file, class: "FormControl-input" %>
    </div>

    <div class="d-flex gap-2">
      <%= form.submit submit_text, class: "btn btn-primary" %>
      <% if cancel_url %>
        <%= link_to "Cancel", cancel_url, class: "btn" %>
      <% end %>
    </div>
  </div>
<% end %>
