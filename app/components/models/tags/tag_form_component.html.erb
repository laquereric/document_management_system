<%= form_with model: tag, url: form_url, method: form_method, class: form_classes, local: true do |form| %>
  <div class="Box p-4">
    <%= render Primer::Alpha::FormControl.new do |form_control| %>
      <%= form_control.label(:name) %>
      <%= form_control.input(:name, type: :text, size: :large) %>
    <% end %>

    <%= render Primer::Alpha::FormControl.new do |form_control| %>
      <%= form_control.label(:color) %>
      <%= form_control.select(:color, 
          options_for_select(color_options, tag.color),
          prompt: "Select color") %>
    <% end %>

    <div class="d-flex gap-2 mt-4">
      <%= render Primer::Beta::Button.new(type: :submit, variant: :primary) do %>
        <%= submit_text %>
      <% end %>
      <% if cancel_url %>
        <%= render Primer::Beta::Button.new(href: cancel_url, variant: :secondary) do %>
          Cancel
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
