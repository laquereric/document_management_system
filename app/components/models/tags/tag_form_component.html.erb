<%= form_with model: tag, url: form_url, method: form_method, class: form_classes, local: true do |form| %>
  <div class="Box p-4">
    <div class="FormControl mb-3">
      <%= form.label :name, class: "FormControl-label" %>
      <%= form.text_field :name, class: "FormControl-input FormControl-large" %>
    </div>

    <div class="FormControl mb-3">
      <%= form.label :color, class: "FormControl-label" %>
      <%= form.select :color, 
          options_for_select(color_options, tag.color),
          { prompt: "Select color" },
          { class: "FormControl-select" } %>
    </div>

    <div class="d-flex gap-2">
      <%= form.submit submit_text, class: "btn btn-primary" %>
      <% if cancel_url %>
        <%= link_to "Cancel", cancel_url, class: "btn" %>
      <% end %>
    </div>
  </div>
<% end %>
