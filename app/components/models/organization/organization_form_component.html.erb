<%= form_with model: organization, url: form_url, method: form_method, class: form_classes, local: true do |form| %>
  <div class="Box p-4">
    <div class="FormControl mb-3">
      <%= form.label :name, class: "FormControl-label" %>
      <%= form.text_field :name, class: "FormControl-input FormControl-large" %>
    </div>

    <div class="FormControl mb-3">
      <%= form.label :description, class: "FormControl-label" %>
      <%= form.text_area :description, class: "FormControl-textarea", rows: 3 %>
    </div>

    <div class="d-flex gap-2">
      <%= form.submit submit_text, class: "btn btn-primary" %>
      <% if cancel_url %>
        <%= link_to "Cancel", cancel_url, class: "btn" %>
      <% end %>
    </div>
  </div>
<% end %>
