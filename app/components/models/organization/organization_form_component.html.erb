<%= form_with model: organization, url: form_url, method: form_method, local: true do |form| %>
  <% if organization.errors.any? %>
    <div class="alert alert-danger mb-4">
      <h4 class="alert-heading">Please fix the following errors:</h4>
      <ul class="mb-0">
        <% organization.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row g-3">
    <div class="col-12">
      <div class="form-group">
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, class: "form-control #{'is-invalid' if organization.errors[:name].any?}", placeholder: "Enter organization name" %>
        <% if organization.errors[:name].any? %>
          <div class="invalid-feedback"><%= organization.errors[:name].first %></div>
        <% end %>
      </div>
    </div>

    <div class="col-12">
      <div class="form-group">
        <%= form.label :description, class: "form-label" %>
        <%= form.text_area :description, 
            rows: 4, 
            class: "form-control #{'is-invalid' if organization.errors[:description].any?}", 
            placeholder: "Describe the organization's purpose and activities" %>
        <% if organization.errors[:description].any? %>
          <div class="invalid-feedback"><%= organization.errors[:description].first %></div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="d-flex flex-items-center gap-3 mt-4">
    <%= form.submit submit_text, class: "btn btn-primary" %>
    <% if cancel_url %>
      <%= link_to "Cancel", cancel_url, class: "btn btn-outline" %>
    <% end %>
  </div>
<% end %>
