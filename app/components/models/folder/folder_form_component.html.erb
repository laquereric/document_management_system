<%= form_with model: folder, url: form_url, method: form_method, class: form_classes, local: true do |form| %>
  <div class="Box p-4">
    <div class="FormControl mb-3">
      <%= form.label :name, class: "FormControl-label" %>
      <%= form.text_field :name, class: "FormControl-input FormControl-large" %>
    </div>

    <div class="FormControl mb-3">
      <%= form.label :description, class: "FormControl-label" %>
      <%= form.text_area :description, class: "FormControl-textarea", rows: 3 %>
    </div>

    <div class="FormControl mb-3">
      <%= form.label :team_id, class: "FormControl-label" %>
      <%= form.select :team_id, 
          options_from_collection_for_select(teams, :id, :name, folder.team_id),
          { prompt: "Select team" },
          { class: "FormControl-select" } %>
    </div>

    <div class="FormControl mb-3">
      <%= form.label :parent_id, class: "FormControl-label" %>
      <%= form.select :parent_id, 
          options_from_collection_for_select(parent_folders, :id, :name, folder.parent_id),
          { prompt: "Select parent folder (optional)" },
          { class: "FormControl-select" } %>
    </div>

    <div class="d-flex gap-2">
      <%= render Primer::Beta::Button.new(type: :submit, variant: :primary) do %>
        <%= submit_text %>
      <% end %>
      <% if cancel_url %>
        <%= render Primer::Beta::Button.new(href: cancel_url, variant: :secondary) do %>
          Cancel
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
