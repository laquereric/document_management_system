#!/usr/bin/env bash

# CI/CD Ruby Environment Manager
# This script manages Ruby version and environment for CI/CD

set -e  # Exit on any error

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Function to print colored output
print_status() {
    echo -e "${BLUE}[INFO]${NC} $1"
}

print_success() {
    echo -e "${GREEN}[SUCCESS]${NC} $1"
}

print_warning() {
    echo -e "${YELLOW}[WARNING]${NC} $1"
}

print_error() {
    echo -e "${RED}[ERROR]${NC} $1"
}

# Function to detect OS
detect_os() {
    if [[ "$OSTYPE" == "linux-gnu"* ]]; then
        echo "linux"
    elif [[ "$OSTYPE" == "darwin"* ]]; then
        echo "macos"
    elif [[ "$OSTYPE" == "cygwin" ]] || [[ "$OSTYPE" == "msys" ]] || [[ "$OSTYPE" == "win32" ]]; then
        echo "windows"
    else
        echo "unknown"
    fi
}

# Function to install Ruby on macOS
install_ruby_macos() {
    local required_version=$1
    print_status "Installing Ruby on macOS..."
    
    # Check if Homebrew is available
    if command -v brew &> /dev/null; then
        print_status "Using Homebrew to install Ruby..."
        brew install ruby
        print_success "Ruby installed via Homebrew"
        return 0
    fi
    
    # Check if rbenv is available
    if command -v rbenv &> /dev/null; then
        print_status "Using rbenv to install Ruby $required_version..."
        eval "$(rbenv init -)"
        rbenv install $required_version
        rbenv local $required_version
        print_success "Ruby $required_version installed via rbenv"
        return 0
    fi
    
    # Check if rvm is available
    if command -v rvm &> /dev/null; then
        print_status "Using rvm to install Ruby $required_version..."
        rvm install $required_version
        rvm use $required_version --default
        print_success "Ruby $required_version installed via rvm"
        return 0
    fi
    
    # Try to install rbenv and then Ruby
    print_status "Installing rbenv and Ruby..."
    if command -v brew &> /dev/null; then
        brew install rbenv ruby-build
        eval "$(rbenv init -)"
        rbenv install $required_version
        rbenv local $required_version
        print_success "Ruby $required_version installed via rbenv"
        return 0
    fi
    
    print_error "Could not install Ruby automatically. Please install Ruby manually:"
    print_error "  - Install Homebrew: https://brew.sh/"
    print_error "  - Then run: brew install ruby"
    print_error "  - Or install rbenv: brew install rbenv ruby-build"
    return 1
}

# Function to install Ruby on Linux
install_ruby_linux() {
    local required_version=$1
    print_status "Installing Ruby on Linux..."
    
    # Check if rbenv is available
    if command -v rbenv &> /dev/null; then
        print_status "Using rbenv to install Ruby $required_version..."
        eval "$(rbenv init -)"
        rbenv install $required_version
        rbenv local $required_version
        print_success "Ruby $required_version installed via rbenv"
        return 0
    fi
    
    # Check if rvm is available
    if command -v rvm &> /dev/null; then
        print_status "Using rvm to install Ruby $required_version..."
        rvm install $required_version
        rvm use $required_version --default
        print_success "Ruby $required_version installed via rvm"
        return 0
    fi
    
    # Try to install rbenv
    print_status "Installing rbenv and Ruby..."
    
    # Detect package manager
    if command -v apt-get &> /dev/null; then
        # Ubuntu/Debian
        sudo apt-get update
        sudo apt-get install -y git curl libssl-dev libreadline-dev zlib1g-dev autoconf bison build-essential libyaml-dev libreadline-dev libncurses5-dev libffi-dev libgdbm-dev libgdbm-compat-dev
        curl -fsSL https://github.com/rbenv/rbenv-installer/raw/HEAD/bin/rbenv-installer | bash
        eval "$(rbenv init -)"
        rbenv install $required_version
        rbenv local $required_version
        print_success "Ruby $required_version installed via rbenv"
        return 0
    elif command -v yum &> /dev/null; then
        # CentOS/RHEL/Fedora
        sudo yum groupinstall -y "Development Tools"
        sudo yum install -y git curl openssl-devel readline-devel zlib-devel
        curl -fsSL https://github.com/rbenv/rbenv-installer/raw/HEAD/bin/rbenv-installer | bash
        eval "$(rbenv init -)"
        rbenv install $required_version
        rbenv local $required_version
        print_success "Ruby $required_version installed via rbenv"
        return 0
    fi
    
    print_error "Could not install Ruby automatically. Please install Ruby manually:"
    print_error "  - Install rbenv: https://github.com/rbenv/rbenv#installation"
    print_error "  - Or install rvm: https://rvm.io/rvm/install"
    return 1
}

# Function to install Ruby automatically
install_ruby_automatically() {
    local required_version=$1
    local os=$(detect_os)
    
    print_warning "Ruby not found. Attempting to install automatically..."
    
    case $os in
        "macos")
            install_ruby_macos $required_version
            ;;
        "linux")
            install_ruby_linux $required_version
            ;;
        "windows")
            print_error "Automatic Ruby installation not supported on Windows."
            print_error "Please install Ruby manually:"
            print_error "  - Download from: https://rubyinstaller.org/"
            print_error "  - Or use WSL (Windows Subsystem for Linux)"
            return 1
            ;;
        *)
            print_error "Unknown operating system. Please install Ruby manually."
            return 1
            ;;
    esac
}

# Function to configure Ruby environment
configure_ruby_environment() {
    print_status "Configuring Ruby environment..."
    
    # Check if we're in the right directory
    if [ ! -f "Gemfile" ]; then
        print_error "Gemfile not found. Please run this script from the Rails application root directory."
        exit 1
    fi
    
    # Get required Ruby version if .ruby-version exists
    local required_version=""
    if [ -f ".ruby-version" ]; then
        required_version=$(cat .ruby-version | tr -d '\n')
    fi
    
    # Check if Ruby is available
    if ! command -v ruby &> /dev/null; then
        if [ -n "$required_version" ]; then
            install_ruby_automatically $required_version
        else
            print_error "Ruby not found and no .ruby-version file specified."
            print_error "Please install Ruby manually or create a .ruby-version file."
            exit 1
        fi
        
        # Verify Ruby is now available
        if ! command -v ruby &> /dev/null; then
            print_error "Ruby installation failed or Ruby is not in PATH."
            print_error "Please restart your terminal or add Ruby to your PATH."
            exit 1
        fi
    fi
    
    # Get Ruby version
    RUBY_VERSION=$(ruby -v | cut -d' ' -f2)
    print_status "Detected Ruby version: $RUBY_VERSION"
    
    # Check if .ruby-version file exists and compare
    if [ -f ".ruby-version" ]; then
        REQUIRED_RUBY_VERSION=$(cat .ruby-version | tr -d '\n')
        print_status "Required Ruby version: $REQUIRED_RUBY_VERSION"
        
        if [ "$RUBY_VERSION" != "$REQUIRED_RUBY_VERSION" ]; then
            print_warning "Ruby version mismatch. Expected: $REQUIRED_RUBY_VERSION, Found: $RUBY_VERSION"
            print_status "Attempting to use rbenv or rvm to switch Ruby version..."
            
            # Try rbenv
            if command -v rbenv &> /dev/null; then
                print_status "Using rbenv to switch to Ruby $REQUIRED_RUBY_VERSION"
                eval "$(rbenv init -)"
                rbenv install -s $REQUIRED_RUBY_VERSION 2>/dev/null || true
                rbenv local $REQUIRED_RUBY_VERSION
                RUBY_VERSION=$(ruby -v | cut -d' ' -f2)
                print_success "Switched to Ruby version: $RUBY_VERSION"
            # Try rvm
            elif command -v rvm &> /dev/null; then
                print_status "Using rvm to switch to Ruby $REQUIRED_RUBY_VERSION"
                rvm use $REQUIRED_RUBY_VERSION --install --create
                RUBY_VERSION=$(ruby -v | cut -d' ' -f2)
                print_success "Switched to Ruby version: $RUBY_VERSION"
            else
                print_warning "No Ruby version manager found. Continuing with current version."
            fi
        fi
    fi
    
    # Check if Bundler is available
    if ! command -v bundle &> /dev/null; then
        print_status "Bundler not found. Installing Bundler..."
        gem install bundler
        if [ $? -ne 0 ]; then
            print_error "Failed to install Bundler. Please install it manually."
            exit 1
        fi
    fi
    
    # Get Bundler version
    BUNDLER_VERSION=$(bundle --version | cut -d' ' -f3)
    print_status "Bundler version: $BUNDLER_VERSION"
    
    # Check if gems are installed
    if [ ! -d "vendor/bundle" ] && [ ! -f ".bundle/config" ]; then
        print_status "Installing Ruby gems..."
        bundle install
        if [ $? -ne 0 ]; then
            print_error "Failed to install Ruby gems. Please run 'bundle install' manually."
            exit 1
        fi
    else
        print_status "Checking if gems are up to date..."
        bundle check || bundle install
    fi
    
    # Check if Rails is available
    if ! bundle exec rails --version &> /dev/null; then
        print_error "Rails not found. Please ensure Rails is in your Gemfile and run 'bundle install'."
        exit 1
    fi
    
    # Get Rails version
    RAILS_VERSION=$(bundle exec rails --version | cut -d' ' -f2)
    print_status "Rails version: $RAILS_VERSION"
    
    print_success "Ruby environment configured successfully"
}

# Main execution
if [ "$1" = "--help" ] || [ "$1" = "-h" ]; then
    echo "CI/CD Ruby Environment Manager"
    echo ""
    echo "Usage: $0 [options]"
    echo ""
    echo "Options:"
    echo "  --help, -h    Show this help message"
    echo "  --version     Show Ruby version information only"
    echo ""
    echo "This script:"
    echo "  - Checks Ruby version against .ruby-version file"
    echo "  - Automatically installs Ruby if not available"
    echo "  - Switches Ruby version using rbenv or rvm if needed"
    echo "  - Installs Bundler if not available"
    echo "  - Installs/updates Ruby gems"
    echo "  - Validates Rails installation"
    echo ""
    echo "Supported platforms:"
    echo "  - macOS (Homebrew, rbenv, rvm)"
    echo "  - Linux (rbenv, rvm, apt-get, yum)"
    echo "  - Windows (manual installation required)"
    exit 0
elif [ "$1" = "--version" ]; then
    if [ -f ".ruby-version" ]; then
        REQUIRED_RUBY_VERSION=$(cat .ruby-version | tr -d '\n')
        echo "Required Ruby version: $REQUIRED_RUBY_VERSION"
    fi
    if command -v ruby &> /dev/null; then
        CURRENT_RUBY_VERSION=$(ruby -v | cut -d' ' -f2)
        echo "Current Ruby version: $CURRENT_RUBY_VERSION"
    else
        echo "Ruby not installed"
    fi
    exit 0
else
    configure_ruby_environment
fi
