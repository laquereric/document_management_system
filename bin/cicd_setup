#!/usr/bin/env bash

# CI/CD Setup Script
# This script sets up the Rails application for CI/CD environments without starting the server

set -e  # Exit on any error

echo "ðŸ”§ Setting up CI/CD Environment..."
echo "=================================="

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Function to print colored output
print_status() {
    echo -e "${BLUE}[INFO]${NC} $1"
}

print_success() {
    echo -e "${GREEN}[SUCCESS]${NC} $1"
}

print_warning() {
    echo -e "${YELLOW}[WARNING]${NC} $1"
}

print_error() {
    echo -e "${RED}[ERROR]${NC} $1"
}

# Step 0: Configure Ruby environment
print_status "Step 0: Configuring Ruby environment..."
if ./bin/cicd_ruby; then
    print_success "Ruby environment configured"
else
    print_error "Failed to configure Ruby environment"
    exit 1
fi

# Step 1: Disable CI/CD security
print_status "Step 1: Disabling CI/CD security..."
if bundle exec rake cicd_security:disable; then
    print_success "CI/CD security disabled"
else
    print_error "Failed to disable CI/CD security"
    exit 1
fi

# Step 2: Create database
print_status "Step 2: Creating database..."
if bundle exec rake db:create; then
    print_success "Database created successfully"
else
    print_warning "Database creation failed (might already exist)"
fi

# Step 3: Run migrations
print_status "Step 3: Running database migrations..."
if bundle exec rake db:migrate; then
    print_success "Database migrations completed"
else
    print_error "Database migrations failed"
    exit 1
fi

# Step 4: Check if we need to seed the database
print_status "Step 4: Checking if database needs seeding..."
if bundle exec rake db:seed RAILS_ENV=development 2>/dev/null; then
    print_success "Database seeded successfully"
else
    print_warning "Database seeding failed or not needed"
fi

# Step 5: Precompile assets (if needed)
print_status "Step 5: Precompiling assets..."
if bundle exec rake assets:precompile RAILS_ENV=development; then
    print_success "Assets precompiled successfully"
else
    print_warning "Asset precompilation failed or not needed"
fi

echo ""
echo "=================================="
print_success "ðŸŽ‰ CI/CD setup complete!"
echo "=================================="
print_status "The application is ready for CI/CD operations"
print_status "To start the server, run: bundle exec rails server"
echo ""
